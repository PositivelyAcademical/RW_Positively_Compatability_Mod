<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - flammability                                                                                   -->
<!--       + For Silver statFactors REPLACE Flammability                                                              -->
<!--                                   WITH Flammability 0.10                                                         -->
<!--       + For Gold statFactors REPLACE Flammability                                                                -->
<!--                                 WITH Flammability 0.10                                                           -->
<!--       + For Steel statFactors REPLACE Flammability                                                               -->
<!--                                  WITH Flammability 0.05                                                          -->
<!--  ==============================================================================================================  -->


<!--  ==============================================================================================================  -->
<!--     + ALL CASES - flammability                                                                                   -->
<!--  ==============================================================================================================  -->
<!--       + For Silver statFactors REPLACE Flammability                                                              -->
<!--                                   WITH Flammability 0.10                                                         -->
<!--       + For Gold statFactors REPLACE Flammability                                                                -->
<!--                                 WITH Flammability 0.10                                                           -->
<!--       + For Steel statFactors REPLACE Flammability                                                               -->
<!--                                  WITH Flammability 0.05                                                          -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Silver"]/stuffProps/statFactors/Flammability</xpath>
        <value>
            <Flammability>0.1</Flammability>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Gold"]/stuffProps/statFactors/Flammability</xpath>
        <value>
            <Flammability>0.1</Flammability>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Steel"]/stuffProps/statFactors/Flammability</xpath>
        <value>
            <Flammability>0.05</Flammability>
        </value>
    </Operation>


</Patch>
