<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Pirates</li>
        </mods>

        <match Class="PatchOperationFindMod">
            <mods>
                <li>[KV] Show Hair With Hats or Hide All Hats</li>
            </mods>

            <match Class="PatchOperationReplace">
                <xpath>/Defs/VFEPirates.WarcasketDef[@Name="VFEP_WarcasketHelmetBase"]/modExtensions/li/hideHead</xpath>
                <value>
                    <hideHead>false</hideHead>
                </value>
            </match>

        </match>

    </Operation>

</Patch>
