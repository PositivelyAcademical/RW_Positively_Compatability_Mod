<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)                                                                                         -->
<!--    + @LAP_Gun_Makeable recipeMaker REMOVE researchPrerequisites                                                  -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)                                                                                         -->
<!--  ==============================================================================================================  -->
<!--    + @LAP_Gun_Makeable recipeMaker REMOVE researchPrerequisites                                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="LAP_Gun_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
