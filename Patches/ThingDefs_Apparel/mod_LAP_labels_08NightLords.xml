<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--       + For LAP_Armour_NightLords_Armor REPLACE label                                                            -->
<!--                                            WITH label Night Lords Power Armour                                   -->
<!--       + For LAP_Armour_NightLords_Raptor REPLACE label                                                           -->
<!--                                             WITH label Night Lords Raptor (Assault) Armour                       -->
<!--       + For LAP_Armour_NightLords_Terminator REPLACE label                                                       -->
<!--                                                 WITH label Night Lords Terminator Armour                         -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_NightLords_Armor REPLACE label                                                            -->
<!--                                            WITH label Night Lords Power Armour                                   -->
<!--       + For LAP_Armour_NightLords_Raptor REPLACE label                                                           -->
<!--                                             WITH label Night Lords Raptor (Assault) Armour                       -->
<!--       + For LAP_Armour_NightLords_Terminator REPLACE label                                                       -->
<!--                                                 WITH label Night Lords Terminator Armour                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Armor"]/label</xpath>
                    <value>
                        <label>Night Lords Power Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Raptor"]/label</xpath>
                    <value>
                        <label>Night Lords Raptor (Assault) Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Terminator"]/label</xpath>
                    <value>
                        <label>Night Lords Terminator Armour</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
