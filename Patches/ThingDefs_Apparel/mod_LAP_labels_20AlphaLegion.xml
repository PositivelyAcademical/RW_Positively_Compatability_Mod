<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--       + For LAP_Armour_Alpharius_Armor REPLACE label                                                             -->
<!--                                           WITH label the Pythian Scales                                          -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - helmets                                                                                        -->
<!--       + For LAP_Armour_Alpharius_Helmet REPLACE label                                                            -->
<!--                                            WITH label the Hydra's Head                                           -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_Alpharius_Armor REPLACE label                                                             -->
<!--                                           WITH label the Pythian Scales                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Alpharius_Armor"]/label</xpath>
                    <value>
                        <label>the Pythian Scales</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - helmets                                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_Alpharius_Helmet REPLACE label                                                            -->
<!--                                            WITH label the Hydra's Head                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Alpharius_Helmet"]/label</xpath>
                    <value>
                        <label>the Hydra's Head</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
