<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--       + For WorldEaters_Armor REPLACE label                                                                      -->
<!--                                  WITH label World Eaters Power Armour                                            -->
<!--       + For WorldEaters_JumpPack REPLACE label                                                                   -->
<!--                                     WITH label World Eaters Assault Armour                                       -->
<!--       + For WorldEaters_Apothecary_Armor REPLACE label                                                           -->
<!--                                             WITH label World Eaters Apothecary Armour                            -->
<!--       + For WorldEaters_Techmarine_Armor REPLACE label                                                           -->
<!--                                             WITH label World Eaters Techmarine Armour                            -->
<!--       + For WorldEaters_Kharn_Armor REPLACE label                                                                -->
<!--                                        WITH label World Eaters Captains' Power Armour                            -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - headgear                                                                                       -->
<!--       + For Butcher_Nail REPLACE label                                                                           -->
<!--                             WITH label the Butcher's Nails                                                       -->
<!--       + For Butcher_Nail_Replica REPLACE label                                                                   -->
<!--                                     WITH label Butcher's Nails replica                                           -->
<!--       + For Butcher_Nail_Replica_Masked REPLACE label                                                            -->
<!--                                            WITH label Butcher's Nails replica (masked)                           -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - helmets                                                                                        -->
<!--       + For WorldEaters_Kharn_Helmet REPLACE label                                                               -->
<!--                                         WITH label World Eaters Captains' Helmet                                 -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For WorldEaters_Armor REPLACE label                                                                      -->
<!--                                  WITH label World Eaters Power Armour                                            -->
<!--       + For WorldEaters_JumpPack REPLACE label                                                                   -->
<!--                                     WITH label World Eaters Assault Armour                                       -->
<!--       + For WorldEaters_Apothecary_Armor REPLACE label                                                           -->
<!--                                             WITH label World Eaters Apothecary Armour                            -->
<!--       + For WorldEaters_Techmarine_Armor REPLACE label                                                           -->
<!--                                             WITH label World Eaters Techmarine Armour                            -->
<!--       + For WorldEaters_Kharn_Armor REPLACE label                                                                -->
<!--                                        WITH label World Eaters Captains' Power Armour                            -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_Armor"]/label</xpath>
                    <value>
                        <label>World Eaters Power Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_JumpPack"]/label</xpath>
                    <value>
                        <label>World Eaters Assault Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_Apothecary_Armor"]/label</xpath>
                    <value>
                        <label>World Eaters Apothecary Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_Techmarine_Armor"]/label</xpath>
                    <value>
                        <label>World Eaters Techmarine Armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_Kharn_Armor"]/label</xpath>
                    <value>
                        <label>World Eaters Captains' Power Armour</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - headgear                                                                                       -->
<!--  ==============================================================================================================  -->
<!--       + For Butcher_Nail REPLACE label                                                                           -->
<!--                             WITH label the Butcher's Nails                                                       -->
<!--       + For Butcher_Nail_Replica REPLACE label                                                                   -->
<!--                                     WITH label Butcher's Nails replica                                           -->
<!--       + For Butcher_Nail_Replica_Masked REPLACE label                                                            -->
<!--                                            WITH label Butcher's Nails replica (masked)                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Butcher_Nail"]/label</xpath>
                    <value>
                        <label>the Butcher's Nails</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Butcher_Nail_Replica"]/label</xpath>
                    <value>
                        <label>Butcher's Nails replica</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Butcher_Nail_Replica_Masked"]/label</xpath>
                    <value>
                        <label>Butcher's Nails replica (masked)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - helmets                                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For WorldEaters_Kharn_Helmet REPLACE label                                                               -->
<!--                                         WITH label World Eaters Captains' Helmet                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WorldEaters_Kharn_Helmet"]/label</xpath>
                    <value>
                        <label>World Eaters Captains' Helmet</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
