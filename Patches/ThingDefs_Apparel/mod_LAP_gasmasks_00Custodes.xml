<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--    STANDARDISATION OF GAS MASKS ETC                                                                              -->
<!--  Tier 0b  -  <.05  -  tough body clothes                                                                         -->
<!--  Tier 1b  -  0.20  -  anti-toxic simple armour (e.g. trenchcoats)                                                -->
<!--  Tier 1h  -  0.70  -  stand alone gas masks                                                                      -->
<!--  Tier 2b  -  0.45  -  sealed armours (e.g. carapace, recon)                                                      -->
<!--  Tier 2h  -  0.45  -  helmets for sealed armours                                                                 -->
<!--  Tier 3b  -  0.65  -  power armour                                                                               -->
<!--  Tier 3h  -  0.35  -  power armour helmets                                                                       -->
<!--  Tier 4b  -  0.80  -  terminator armour, etc. (e.g. Primarchs)                                                   -->
<!--  Tier 4h  -  0.20  -  terminator helmets                                                                         -->
<!--  Tier 5b  -  1.00  -  special armours (those designed to be worn alone, e.g. Angron, Sanguinius, Emperor)        -->
<!--  Tier 5h  -  1.00  -  special headgear (e.g. Emperor's Crown)                                                    -->
<!--  ==============================================================================================================  -->



<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--       + For Golden_General_Armor (4b) ADD ToxicSensitivity (-0.80) to equippedStatOffsets                        -->
<!--       + For Emperor_Armor (5b) ADD ToxicSensitivity (-1.00) to equippedStatOffsets                               -->
<!--       + For Golden_General_Helmet (4h) REPLACE ToxicSensitivity -1.00 with -0.20                                 -->
<!--       + For Emperor_Crown (5h) ADD ToxicSensitivity (-1.00) to equippedStatOffsets                               -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - armour                                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For Golden_General_Armor (4b) ADD ToxicSensitivity (-0.80) to equippedStatOffsets                        -->
<!--       + For Emperor_Armor (5b) ADD ToxicSensitivity (-1.00) to equippedStatOffsets                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Golden_General_Armor"]/equippedStatOffsets</xpath>
                    <value>
                        <ToxicSensitivity>-0.80</ToxicSensitivity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Emperor_Armor"]/equippedStatOffsets</xpath>
                    <value>
                        <ToxicSensitivity>-1.00</ToxicSensitivity>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - helmets                                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For Golden_General_Helmet (4h) REPLACE ToxicSensitivity -1.00 with -0.20                                 -->
<!--       + For Emperor_Crown (5h) ADD ToxicSensitivity (-1.00) to equippedStatOffsets                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Golden_General_Helmet"]/equippedStatOffsets/ToxicSensitivity</xpath>
                    <value>
                        <ToxicSensitivity>-0.20</ToxicSensitivity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Emperor_Crown"]/equippedStatOffsets</xpath>
                    <value>
                        <ToxicSensitivity>-1.00</ToxicSensitivity>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
