                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Terminator_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Perturabo_Head"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

