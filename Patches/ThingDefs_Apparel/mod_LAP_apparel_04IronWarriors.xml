<!--       + For LAP_Armour_Perturabo_Head ADD tags PrestigeCombatGear                                                -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty - armour                                                                            -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_IronWarriors_Armor ADD tags PrestigeCombatGear                                            -->
<!--       + For LAP_Armour_IronWarriors_Apothecary_Armor ADD tags PrestigeCombatGear                                 -->
<!--       + For LAP_Armour_IronWarriors_Techmarine_Armor ADD tags PrestigeCombatGear                                 -->
<!--       + For LAP_Armour_IronWarriors_Terminator ADD tags PrestigeCombatGear                                       -->
<!--       + For LAP_Armour_Perturabo_Armor ADD tags PrestigeCombatGear                                               -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Apothecary_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Techmarine_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Terminator"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Perturabo_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty - helmets                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_IronWarriors_Helmet ADD tags PrestigeCombatGear                                           -->
<!--       + For LAP_Armour_IronWarriors_Apothecary_Helmet ADD tags PrestigeCombatGear                                -->
<!--       + For LAP_Armour_IronWarriors_Techmarine_Helmet ADD tags PrestigeCombatGear                                -->
<!--       + For LAP_Armour_IronWarriors_Terminator_Helmet ADD tags PrestigeCombatGear                                -->
<!--       + For LAP_Armour_Perturabo_Head ADD tags PrestigeCombatGear                                                -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Apothecary_Helmet"]/apparel</xpath>
