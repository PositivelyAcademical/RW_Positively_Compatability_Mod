<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For Apparel_EltexSkullcap ADD countsAsClothingForNudity (false)                                          -->
<!--       + For Apparel_CrownStellic ADD countsAsClothingForNudity (false)                                           -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_EltexSkullcap ADD countsAsClothingForNudity (false)                                          -->
<!--       + For Apparel_CrownStellic ADD countsAsClothingForNudity (false)                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_EltexSkullcap"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_CrownStellic"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
