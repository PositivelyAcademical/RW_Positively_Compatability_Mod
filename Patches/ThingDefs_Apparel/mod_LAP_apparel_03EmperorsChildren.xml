<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  armour                                                                              -->
<!--    + LAP_Armour_Emperors_Children_Power_Armor recipeMaker REPLACE researchPrerequisite                           -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Armor recipeMaker REPLACE researchPrerequisite                        -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  helmets                                                                             -->
<!--    + LAP_Armour_Emperors_Children_Helmet recipeMaker REPLACE researchPrerequisite                                -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Helmet recipeMaker REPLACE researchPrerequisite                       -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--  ==============================================================================================================  -->
<!--  + MATCH Royalty  (ThingDef)  -  armour                                                                          -->
<!--    + LAP_Armour_Emperors_Children_Power_Armor ADD tags PrestigeCombatGear                                        -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Armor ADD tags PrestigeCombatGear                                     -->
<!--  ==============================================================================================================  -->
<!--  + MATCH Royalty  (ThingDef)  -  helmets                                                                         -->
<!--    + LAP_Armour_Emperors_Children_Helmet ADD tags PrestigeCombatGear                                             -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Helmet ADD tags PrestigeCombatGear                                    -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  armour                                                                              -->
<!--  ==============================================================================================================  -->
<!--    + LAP_Armour_Emperors_Children_Power_Armor recipeMaker REPLACE researchPrerequisite                           -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Armor recipeMaker REPLACE researchPrerequisite                        -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Power_Armor"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Emperors_Children</li>
                            <li>OG_Imperial_Tech_Apparel_Armour_T3</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Sergeant_Armor"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Emperors_Children</li>
                            <li>OG_Imperial_Tech_Apparel_Armour_T3</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  helmets                                                                             -->
<!--  ==============================================================================================================  -->
<!--    + LAP_Armour_Emperors_Children_Helmet recipeMaker REPLACE researchPrerequisite                                -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Helmet recipeMaker REPLACE researchPrerequisite                       -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Emperors_Children          -->
<!--                                                                          li  OG_Imperial_Tech_Apparel_Armour_T3  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Helmet"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Emperors_Children</li>
                            <li>OG_Imperial_Tech_Apparel_Armour_T3</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Sergeant_Helmet"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Emperors_Children</li>
                            <li>OG_Imperial_Tech_Apparel_Armour_T3</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + MATCH Royalty  (ThingDef)  -  armour                                                                          -->
<!--  ==============================================================================================================  -->
<!--    + LAP_Armour_Emperors_Children_Power_Armor ADD tags PrestigeCombatGear                                        -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Armor ADD tags PrestigeCombatGear                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Power_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Sergeant_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
<!--  + MATCH Royalty  (ThingDef)  -  helmets                                                                         -->
<!--  ==============================================================================================================  -->
<!--    + LAP_Armour_Emperors_Children_Helmet ADD tags PrestigeCombatGear                                             -->
<!--    + LAP_Armour_Emperors_Children_Sergeant_Helmet ADD tags PrestigeCombatGear                                    -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Emperors_Children_Sergeant_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
