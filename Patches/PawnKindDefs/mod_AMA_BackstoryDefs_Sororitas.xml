<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - Arco Flagellant                                                                                -->
<!--       + For OG_Imperial_Arco_Flagellant REPLACE workDisables                                                     -->
<!--                                            WITH workDisables li  ManualDumb                                      -->
<!--                                                              li  ManualSkilled                                   -->
<!--                                                              li  Caring                                          -->
<!--                                                              li  Social                                          -->
<!--                                                              li  Commoner                                        -->
<!--                                                              li  Intellectual                                    -->
<!--                                                              li  Animals                                         -->
<!--                                                              li  Artistic                                        -->
<!--                                                              li  Crafting                                        -->
<!--                                                              li  Cooking                                         -->
<!--                                                              li  Firefighting                                    -->
<!--                                                              li  Cleaning                                        -->
<!--                                                              li  Hauling                                         -->
<!--                                                              li  PlantWork                                       -->
<!--                                                              li  Mining                                          -->
<!--                                                              li  Hunting                                         -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - Arco Flagellant                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Arco_Flagellant REPLACE workDisables                                                     -->
<!--                                            WITH workDisables li  ManualDumb                                      -->
<!--                                                              li  ManualSkilled                                   -->
<!--                                                              li  Caring                                          -->
<!--                                                              li  Social                                          -->
<!--                                                              li  Commoner                                        -->
<!--                                                              li  Intellectual                                    -->
<!--                                                              li  Animals                                         -->
<!--                                                              li  Artistic                                        -->
<!--                                                              li  Crafting                                        -->
<!--                                                              li  Cooking                                         -->
<!--                                                              li  Firefighting                                    -->
<!--                                                              li  Cleaning                                        -->
<!--                                                              li  Hauling                                         -->
<!--                                                              li  PlantWork                                       -->
<!--                                                              li  Mining                                          -->
<!--                                                              li  Hunting                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/AdeptusMechanicus.BackstoryDef[defName="OG_Imperial_Arco_Flagellant"]/workDisables</xpath>
                    <value>
                        <workDisables>
                            <li>ManualDumb</li>
                            <li>ManualSkilled</li>
                            <li>Caring</li>
                            <li>Social</li>
                            <li>Commoner</li>
                            <li>Intellectual</li>
                            <li>Animals</li>
                            <li>Artistic</li>
                            <li>Crafting</li>
                            <li>Cooking</li>
                            <li>Firefighting</li>
                            <li>Cleaning</li>
                            <li>Hauling</li>
                            <li>PlantWork</li>
                            <li>Mining</li>
                            <li>Hunting</li>
                        </workDisables>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
