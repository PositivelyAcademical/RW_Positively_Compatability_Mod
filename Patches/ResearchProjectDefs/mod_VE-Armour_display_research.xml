<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--    + For VAE_LeatherTanning IGNORE researchViewX                                                                 -->
<!--    + For VAE_LeatherTanning REPLACE researchViewY                                                                -->
<!--                                WITH researchViewY  1.24                                                          -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + For VAE_HazardProtection REPLACE researchViewX                                                              -->
<!--                                  WITH researchViewX  4                                                           -->
<!--    + For VAE_HazardProtection REPLACE researchViewY                                                              -->
<!--                                  WITH researchViewY  2.48                                                        -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Armour Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VAE_LeatherTanning REPLACE researchViewY                                                                -->
<!--                                WITH researchViewY  1.24                                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_LeatherTanning"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.24</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VAE_HazardProtection REPLACE researchViewX                                                              -->
<!--                                  WITH researchViewX  4                                                           -->
<!--    + For VAE_HazardProtection REPLACE researchViewY                                                              -->
<!--                                  WITH researchViewY  2.48                                                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_HazardProtection"]/researchViewX</xpath>
                    <value>
                        <researchViewX>4</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_HazardProtection"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
