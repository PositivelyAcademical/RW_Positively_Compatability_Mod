<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--    + VFE_Res_FarmingTechniques IGNORE researchViewX                                                              -->
<!--    + VFE_Res_FarmingTechniques REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  1.24                                                       -->
<!--    + VFE_Res_FarmingTechniques REPLACE description                                                               -->
<!--                                   WITH description  Develop the theoretical basis for larger-scale farming       -->
<!--                                                      operations, including centralised feeding, and scarecrows   -->
<!--                                                      to deter wildlife from eating your crops.                   -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + VFE_Res_Sprinkler REPLACE researchViewX                                                                     -->
<!--                           WITH researchViewX  2                                                                  -->
<!--    + VFE_Res_Sprinkler REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 11 (Y = 6.20)                                                            -->
<!--    + VFE_Res_AdvancedHydroponics IGNORE researchViewX                                                            -->
<!--    + VFE_Res_AdvancedHydroponics IGNORE researchViewY                                                            -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Furniture Expanded - Farming</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFE_Res_FarmingTechniques REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  1.24                                                       -->
<!--    + VFE_Res_FarmingTechniques REPLACE description                                                               -->
<!--                                   WITH description  Develop the theoretical basis for larger-scale farming       -->
<!--                                                      operations, including centralised feeding, and scarecrows   -->
<!--                                                      to deter wildlife from eating your crops.                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_FarmingTechniques"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.24</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_FarmingTechniques"]/description</xpath>
                    <value>
                        <description>Develop the theoretical basis for larger-scale farming operations, including centralised feeding, and scarecrows to deter wildlife from eating your crops.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFE_Res_Sprinkler REPLACE researchViewX                                                                     -->
<!--                           WITH researchViewX  2                                                                  -->
<!--    + VFE_Res_Sprinkler REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_Sprinkler"]/researchViewX</xpath>
                    <value>
                        <researchViewX>2</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_Sprinkler"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
