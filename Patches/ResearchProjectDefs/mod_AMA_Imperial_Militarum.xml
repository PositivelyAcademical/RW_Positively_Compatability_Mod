<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  AdeptusArbites                                                                  -->
<!--    + OG_Militarum_Tech_Base_T1 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  AdeptusMilitarum                                                                -->
<!--    + OG_Militarum_Tech_Base_T2 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  MilitarumTempestus                                                              -->
<!--    + OG_Militarum_Tech_Base_T3 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  AdeptusArbites                                                                  -->
<!--  ==============================================================================================================  -->
<!--    + OG_Militarum_Tech_Base_T1 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T1"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.25</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  AdeptusMilitarum                                                                -->
<!--  ==============================================================================================================  -->
<!--    + OG_Militarum_Tech_Base_T2 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T2"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.25</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchDefs)  -  MilitarumTempestus                                                              -->
<!--  ==============================================================================================================  -->
<!--    + OG_Militarum_Tech_Base_T3 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  2.25                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T3"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.25</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
