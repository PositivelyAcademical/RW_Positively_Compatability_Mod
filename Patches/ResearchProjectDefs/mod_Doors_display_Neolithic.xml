<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - line 8                                                                                         -->
<!--       + For ProjectHeron_Curtains @REMOVE @ParentName                                                            -->
<!--       + For ProjectHeron_Curtains IGNORE researchViewX                                                           -->
<!--       + For ProjectHeron_Curtains REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  4.8                                                     -->
<!--       + For ProjectHeron_Gates @REMOVE @ParentName                                                               -->
<!--       + For ProjectHeron_Gates REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  1                                                          -->
<!--       + For ProjectHeron_Gates REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.8                                                        -->
<!--       + For ProjectHeron_PrisonDoors @REMOVE @ParentName                                                         -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  2                                                    -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  4.8                                                  -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - line 8                                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For ProjectHeron_Curtains @REMOVE @ParentName                                                            -->
<!--       + For ProjectHeron_Curtains REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  4.8                                                     -->
<!--       + For ProjectHeron_Gates @REMOVE @ParentName                                                               -->
<!--       + For ProjectHeron_Gates REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  1                                                          -->
<!--       + For ProjectHeron_Gates REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.8                                                        -->
<!--       + For ProjectHeron_PrisonDoors @REMOVE @ParentName                                                         -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  2                                                    -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  4.8                                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAttributeRemove">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Curtains"]</xpath>
                    <attribute>ParentName</attribute>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Curtains"]/researchViewY</xpath>
                    <value>
                        <researchViewY>4.8</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationAttributeRemove">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Gates"]</xpath>
                    <attribute>ParentName</attribute>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Gates"]/researchViewX</xpath>
                    <value>
                        <researchViewX>1</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Gates"]/researchViewY</xpath>
                    <value>
                        <researchViewY>4.8</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationAttributeRemove">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_PrisonDoors"]</xpath>
                    <attribute>ParentName</attribute>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_PrisonDoors"]/researchViewX</xpath>
                    <value>
                        <researchViewX>2</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_PrisonDoors"]/researchViewY</xpath>
                    <value>
                        <researchViewY>4.8</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
