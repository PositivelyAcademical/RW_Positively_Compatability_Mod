<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--       + For OG_Mechanicus_Tech_Base_T3 ADD prerequisites Fabrication                                             -->
<!--       + For OG_Mechanicus_Tech_Weapons_Radium ADD prerequisites OG_Common_Tech_Weapons_Special                   -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Mechanicus_Tech_Base_T3 ADD prerequisites Fabrication                                             -->
<!--       + For OG_Mechanicus_Tech_Weapons_Radium ADD prerequisites OG_Common_Tech_Weapons_Special                   -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Mechanicus_Tech_Base_T3"]/prerequisites</xpath>
                    <value>
                        <li>Fabrication</li>
                    </value>
                </li>

                <li Class = "PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Mechanicus_Tech_Weapons_Radium"]/prerequisites</xpath>
                    <value>
                        <li>OG_Common_Tech_Weapons_Special</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
