<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - LegionesAstartes                                                                               -->
<!--       + For ImperialMetals IGNORE researchViewX 0                                                                -->
<!--       + For ImperialMetals IGNORE researchViewY 0                                                                -->
<!--       + For LAP_Tech_Basic IGNORE researchViewX 1                                                                -->
<!--       + For LAP_Tech_Basic IGNORE researchViewY 0                                                                -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--       + For LAP_Tech_DarkAngels IGNORE  researchViewX  2                                                         -->
<!--       + For LAP_Tech_DarkAngels REPLACE researchViewY (2)                                                        -->
<!--                                    WITH researchViewY  0                                                         -->
<!--       + For LAP_Tech_Emperors_Children REPLACE researchViewX (6)                                                 -->
<!--                                           WITH researchViewX  4                                                  -->
<!--       + For LAP_Tech_Emperors_Children IGNORE  researchViewY  0                                                  -->
<!--       + For LAP_Tech_Iron_Warriors IGNORE researchViewX 5                                                        -->
<!--       + For LAP_Tech_Iron_Warriors IGNORE researchViewY 0                                                        -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--       + For LAP_Tech_Night_Lords REPLACE researchViewX (3)                                                       -->
<!--                                     WITH researchViewX  4                                                        -->
<!--       + For LAP_Tech_Night_Lords REPLACE researchViewY (0)                                                       -->
<!--                                     WITH researchViewY  0.75                                                     -->
<!--       + For LAP_Tech_BloodAngels REPLACE researchViewX (3)                                                       -->
<!--                                     WITH researchViewX  5                                                        -->
<!--       + For LAP_Tech_BloodAngels REPLACE researchViewY (2)                                                       -->
<!--                                     WITH researchViewY  0.75                                                     -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--       + For LAP_Tech_World_Eaters REPLACE researchViewX (4)                                                      -->
<!--                                      WITH researchViewX  3                                                       -->
<!--       + For LAP_Tech_World_Eaters REPLACE researchViewY (0)                                                      -->
<!--                                      WITH researchViewY  1.50                                                    -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--       + For LAP_Tech_SOH IGNORE  researchViewX  2                                                                -->
<!--       + For LAP_Tech_SOH REPLACE researchViewY (0)                                                               -->
<!--                             WITH researchViewY  2.25                                                             -->
<!--       + For LAP_Tech_Alpha_Legion REPLACE researchViewX (7)                                                      -->
<!--                                      WITH researchViewX  6                                                       -->
<!--       + For LAP_Tech_Alpha_Legion REPLACE researchViewY (0)                                                      -->
<!--                                      WITH researchViewY  2.25                                                    -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--       + For LAP_Tech_Emperor IGNORE researchViewX 1                                                              -->
<!--       + For LAP_Tech_Emperor IGNORE researchViewY 3                                                              -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - LegionesAstartes                                                                               -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Tech_DarkAngels REPLACE researchViewY (2)                                                        -->
<!--                                    WITH researchViewY  0                                                         -->
<!--       + For LAP_Tech_Emperors_Children REPLACE researchViewX (6)                                                 -->
<!--                                           WITH researchViewX  4                                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_DarkAngels"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.00</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_Emperors_Children"]/researchViewX</xpath>
                    <value>
                        <researchViewX>4</researchViewX>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Tech_Night_Lords REPLACE researchViewX (3)                                                       -->
<!--                                     WITH researchViewX  4                                                        -->
<!--       + For LAP_Tech_Night_Lords REPLACE researchViewY (0)                                                       -->
<!--                                     WITH researchViewY  0.75                                                     -->
<!--       + For LAP_Tech_BloodAngels REPLACE researchViewX (3)                                                       -->
<!--                                     WITH researchViewX  5                                                        -->
<!--       + For LAP_Tech_BloodAngels REPLACE researchViewY (2)                                                       -->
<!--                                     WITH researchViewY  0.75                                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_Night_Lords"]/researchViewX</xpath>
                    <value>
                        <researchViewX>4</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_Night_Lords"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.75</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_BloodAngels"]/researchViewX</xpath>
                    <value>
                        <researchViewX>5</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_BloodAngels"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.75</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Tech_World_Eaters REPLACE researchViewX (4)                                                      -->
<!--                                      WITH researchViewX  3                                                       -->
<!--       + For LAP_Tech_World_Eaters REPLACE researchViewY (0)                                                      -->
<!--                                      WITH researchViewY  1.50                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_World_Eaters"]/researchViewX</xpath>
                    <value>
                        <researchViewX>3</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_World_Eaters"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.50</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - LegionesAstartes (cont)                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Tech_SOH REPLACE researchViewY (0)                                                               -->
<!--                             WITH researchViewY  2.25                                                             -->
<!--       + For LAP_Tech_Alpha_Legion REPLACE researchViewX (7)                                                      -->
<!--                                      WITH researchViewX  6                                                       -->
<!--       + For LAP_Tech_Alpha_Legion REPLACE researchViewY (0)                                                      -->
<!--                                      WITH researchViewY  2.25                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_SOH"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.25</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_Alpha_Legion"]/researchViewX</xpath>
                    <value>
                        <researchViewX>6</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="LAP_Tech_Alpha_Legion"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.25</researchViewY>
                    </value>
                </li>



<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
