<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--    + For VFE_Res_FarmingTechniques IGNORE researchViewX                                                          -->
<!--    + For VFE_Res_FarmingTechniques REPLACE researchViewY                                                         -->
<!--                                       WITH researchViewY  1.24                                                   -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 11 (Y = 6.20)                                                            -->
<!--    + For VFE_Res_AdvancedHydroponics IGNORE researchViewX                                                        -->
<!--    + For VFE_Res_AdvancedHydroponics IGNORE researchViewY                                                        -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Furniture Expanded - Farming</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFE_Res_FarmingTechniques REPLACE researchViewY                                                         -->
<!--                                       WITH researchViewY  1.24                                                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_FarmingTechniques"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.24</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
