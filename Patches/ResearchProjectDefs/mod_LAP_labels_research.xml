<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - line 5                                                                                         -->
<!--       + For LAP_Tech_Emperor REPLACE description                                                                 -->
<!--                                 WITH description  Allows you to create the wargear of the Legio Custodes and     -->
<!--                                                    the Emperor of Mankind.                                       -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - line 1b                                                                                        -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Tech_DarkAngels REPLACE description                                                              -->
