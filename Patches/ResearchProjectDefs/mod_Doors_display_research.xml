<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchTabDef                                                                                 -->
<!--       + For Heron_ResearchTab REMOVE ./                                                                          -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchProjectDef                                                                             -->
<!--       + For @ProjectHeronResearch REPLACE tab                                                                    -->
<!--                                      WITH tab  POS_ResearchTab                                                   -->
<!--       + For ProjectHeron_Curtains IGNORE researchViewX  0                                                        -->
<!--       + For ProjectHeron_Curtains REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  1.8                                                     -->
<!--       + For ProjectHeron_Gates REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  0.8                                                        -->
<!--       + For ProjectHeron_Gates REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  1.8                                                        -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  0                                                    -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  2.4                                                  -->
<!--       + For ProjectHeron_RemoteDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  0.8                                                  -->
<!--       + For ProjectHeron_RemoteDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  2.4                                                  -->
<!--       + For ProjectHeron_BlastDoors REPLACE researchViewX                                                        -->
<!--                                        WITH researchViewX  0.8                                                   -->
<!--       + For ProjectHeron_BlastDoors REPLACE researchViewY                                                        -->
<!--                                        WITH researchViewY  3                                                     -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Doors Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchTabDef                                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For Heron_ResearchTab REMOVE ./                                                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ResearchTabDef[defName="Heron_ResearchTab"]</xpath>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchProjectDef                                                                             -->
<!--  ==============================================================================================================  -->
<!--       + For @ProjectHeronResearch REPLACE tab                                                                    -->
<!--                                      WITH tab  POS_ResearchTab                                                   -->
<!--       + For ProjectHeron_Curtains REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  1.8                                                     -->
<!--       + For ProjectHeron_Gates REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  0.8                                                        -->
<!--       + For ProjectHeron_Gates REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  1.8                                                        -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  0                                                    -->
<!--       + For ProjectHeron_PrisonDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  2.4                                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[@Name="ProjectHeronResearch"]/tab</xpath>
                    <value>
                        <tab>POS_ResearchTab</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Curtains"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.8</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Gates"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0.8</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_Gates"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.8</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_PrisonDoors"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_PrisonDoors"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.4</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchProjectDef (cont)                                                                      -->
<!--  ==============================================================================================================  -->
<!--       + For ProjectHeron_RemoteDoors REPLACE researchViewX                                                       -->
<!--                                         WITH researchViewX  0.8                                                  -->
<!--       + For ProjectHeron_RemoteDoors REPLACE researchViewY                                                       -->
<!--                                         WITH researchViewY  2.4                                                  -->
<!--       + For ProjectHeron_BlastDoors REPLACE researchViewX                                                        -->
<!--                                        WITH researchViewX  0.8                                                   -->
<!--       + For ProjectHeron_BlastDoors REPLACE researchViewY                                                        -->
<!--                                        WITH researchViewY  3                                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_RemoteDoors"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0.8</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_RemoteDoors"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.4</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_BlastDoors"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0.8</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ProjectHeron_BlastDoors"]/researchViewY</xpath>
                    <value>
                        <researchViewY>3</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
