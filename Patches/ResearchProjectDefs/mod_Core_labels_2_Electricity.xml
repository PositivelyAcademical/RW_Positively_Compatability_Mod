<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - row 5                                                                                          -->
<!--       + For Machining REPLACE description                                                                        -->
<!--                          WITH description  Build machining tables to craft guns, grenades, armour, and to shred  -->
<!--                                             dead mechanoids for resources.                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - row 6                                                                                          -->
<!--       + For FlakArmor REPLACE label                                                                              -->
<!--                          WITH label  flak armour                                                                 -->
<!--       + For FlakArmor REPLACE description                                                                        -->
<!--                          WITH description  Craft clothing with metal armour sewn in to resist bullets and        -->
<!--                                             explosions. This weighty armour movement slightly.                   -->
<!--  ==============================================================================================================  -->


<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - row 5                                                                                          -->
<!--  ==============================================================================================================  -->
<!--       + For Machining REPLACE description                                                                        -->
<!--                          WITH description  Build machining tables to craft guns, grenades, armour, and to shred  -->
<!--                                             dead mechanoids for resources.                                       -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ResearchProjectDef[defName="Machining"]/description</xpath>
        <value>
            <description>Build machining tables to craft guns, grenades, armour, and to shred dead mechanoids for resources.</description>
        </value>
    </Operation>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - row 6                                                                                          -->
<!--  ==============================================================================================================  -->
<!--       + For FlakArmor REPLACE label                                                                              -->
<!--                          WITH label  flak armour                                                                 -->
<!--       + For FlakArmor REPLACE description                                                                        -->
<!--                          WITH description  Craft clothing with metal armour sewn in to resist bullets and        -->
<!--                                             explosions. This weighty armour movement slightly.                   -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ResearchProjectDef[defName="FlakArmor"]/label</xpath>
        <value>
            <label>flak armour</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ResearchProjectDef[defName="FlakArmor"]/description</xpath>
        <value>
            <description>Craft clothing with metal armour sewn in to resist bullets and explosions. This weighty armour movement slightly.</description>
        </value>
    </Operation>

<!--  ==============================================================================================================  -->
</Patch>
