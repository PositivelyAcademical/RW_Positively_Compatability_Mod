<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 7 (Y = 3.72)                                                             -->
<!--    + For VFE_IndustrialGenerators IGNORE researchViewX                                                           -->
<!--    + For VFE_IndustrialGenerators REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  3.72                                                    -->
<!--    + For VFE_AdvancedBatteries IGNORE researchViewX                                                              -->
<!--    + For VFE_AdvancedBatteries REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  3.72                                                       -->
<!--    + For VFE_AdvancedPowerSources REPLACE researchViewX                                                          -->
<!--                                      WITH researchViewX  5                                                       -->
<!--    + For VFE_AdvancedPowerSources REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  3.72                                                    -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Power</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 7 (Y = 3.72)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFE_IndustrialGenerators REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  3.72                                                    -->
<!--    + For VFE_AdvancedBatteries REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  3.72                                                       -->
<!--    + For VFE_AdvancedPowerSources REPLACE researchViewX                                                          -->
<!--                                      WITH researchViewX  5                                                       -->
<!--    + For VFE_AdvancedPowerSources REPLACE researchViewY                                                          -->
<!--                                      WITH researchViewY  3.72                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_IndustrialGenerators"]/researchViewY</xpath>
                    <value>
                        <researchViewY>3.72</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_AdvancedBatteries"]/researchViewY</xpath>
                    <value>
                        <researchViewY>3.72</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_AdvancedPowerSources"]/researchViewX</xpath>
                    <value>
                        <researchViewX>5</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_AdvancedPowerSources"]/researchViewY</xpath>
                    <value>
                        <researchViewY>3.72</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
