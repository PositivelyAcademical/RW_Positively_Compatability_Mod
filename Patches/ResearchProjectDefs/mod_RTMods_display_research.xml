<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + MATCH RTFuse RTPowerSwitch RTSolarFlareShield - ResearchTabDef                                             -->
<!--       + For RTMods REMOVE ./                                                                                     -->
<!--  ==============================================================================================================  -->
<!--     + MATCH RTFuse - ResearchProjectDef                                                                          -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE tab                                                            -->
<!--                                              WITH tab  POS_ResearchTab                                           -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE researchViewX                                                  -->
<!--                                              WITH researchViewX 4                                                -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE researchViewY                                                  -->
<!--                                              WITH researchViewY 1                                                -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE tab                                                       -->
<!--                                                   WITH tab  POS_ResearchTab                                      -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE researchViewX                                             -->
<!--                                                   WITH researchViewX  6                                          -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE researchViewY                                             -->
<!--                                                   WITH researchViewY  1                                          -->
<!--  ==============================================================================================================  -->
<!--     + MATCH RTPowerSwitch - ResearchProjectDef                                                                   -->
<!--       + For ResearchProject_RTEmergencyPower REPLACE tab                                                         -->
<!--                                                 WITH tab  POS_ResearchTab                                        -->
<!--       + For ResearchProject_RTEmergencyPower REPLACE researchViewX                                               -->
<!--                                                 WITH researchViewX  0                                            -->
<!--       + For ResearchProject_RTEmergencyPower REPLACE researchViewY                                               -->
<!--                                                 WITH researchViewY  0.6                                          -->
<!--  ==============================================================================================================  -->
<!--     MATCH RTSolarFlareShield - ResearchProjectDef                                                                -->
<!--       + For ResearchProject_RTMagneticShield REPLACE tab                                                         -->
<!--                                                 WITH tab  POS_ResearchTab                                        -->
<!--       + For ResearchProject_RTMagneticShield REPLACE researchViewX                                               -->
<!--                                                 WITH researchViewX  0.8                                          -->
<!--       + For ResearchProject_RTMagneticShield REPLACE researchViewY                                               -->
<!--                                                 WITH researchViewY  0.6                                          -->
<!--  ==============================================================================================================  -->



<!--  ==============================================================================================================  -->
<!--     + MATCH RTFuse RTPowerSwitch RTSolarFlareShield - ResearchTabDef                                             -->
<!--  ==============================================================================================================  -->
<!--       + For RTMods REMOVE ./                                                                                     -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RT Fuse</li>
            <li>RT Power Switch</li>
            <li>RT Solar Flare Shield</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ResearchTabDef[defName="RTMods"]</xpath>
                </li>

            </operations>
        </match>
    </Operation>

<!--  ==============================================================================================================  -->
<!--     + MATCH RTFuse - ResearchProjectDef                                                                          -->
<!--  ==============================================================================================================  -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE tab                                                            -->
<!--                                              WITH tab  POS_ResearchTab                                           -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE researchViewX                                                  -->
<!--                                              WITH researchViewX 4                                                -->
<!--       +  For ResearchProject_RTBasicFuses REPLACE researchViewY                                                  -->
<!--                                              WITH researchViewY 1                                                -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE tab                                                       -->
<!--                                                   WITH tab  POS_ResearchTab                                      -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE researchViewX                                             -->
<!--                                                   WITH researchViewX  6                                          -->
<!--       +  For ResearchProject_RTCircuitBreakers REPLACE researchViewY                                             -->
<!--                                                   WITH researchViewY  1                                          -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RT Fuse</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTBasicFuses"]/tab</xpath>
                    <value>
                        <tab>POS_ResearchTab</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTBasicFuses"]/researchViewX</xpath>
                    <value>
                        <researchViewX>4</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTBasicFuses"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTCircuitBreakers"]/tab</xpath>
                    <value>
                        <tab>POS_ResearchTab</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTCircuitBreakers"]/researchViewX</xpath>
                    <value>
                        <researchViewX>6</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTCircuitBreakers"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

<!--  ==============================================================================================================  -->
