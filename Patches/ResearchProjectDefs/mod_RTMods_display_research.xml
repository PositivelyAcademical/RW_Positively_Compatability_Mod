                        <tab>POS_ResearchTab</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTEmergencyPower"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="ResearchProject_RTEmergencyPower"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.6</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

<!--  ==============================================================================================================  -->
<!--     MATCH RTSolarFlareShield - ResearchProjectDef                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For ResearchProject_RTMagneticShield REPLACE tab                                                         -->
<!--                                                 WITH tab  POS_ResearchTab                                        -->
<!--       + For ResearchProject_RTMagneticShield REPLACE researchViewX                                               -->
<!--                                                 WITH researchViewX  0.8                                          -->
<!--       + For ResearchProject_RTMagneticShield REPLACE researchViewY                                               -->
<!--                                                 WITH researchViewY  0.6                                          -->
