<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--    + VAE_LeatherTanning IGNORE researchViewX                                                                     -->
<!--    + VAE_LeatherTanning REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  1.24                                                              -->
<!--    + VAE_LeatherTanning REPLACE description                                                                      -->
<!--                            WITH description  Learn the process of tanning to craft thicker and more durable      -->
<!--                                               armours.                                                           -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 4 (Y = 1.86)                                                             -->
<!--    + VAE_MlitaryCamouflage IGNORE researchViewX                                                                  -->
<!--    + VAE_MlitaryCamouflage REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  1.86                                                           -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + VAE_HazardProtection REPLACE researchViewX                                                                  -->
<!--                              WITH researchViewX  4                                                               -->
<!--    + VAE_HazardProtection REPLACE researchViewY                                                                  -->
<!--                              WITH researchViewY  2.48                                                            -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 6 (Y = 3.10)                                                             -->
<!--    + VAE_TrooperArmor IGNORE researchViewX                                                                       -->
<!--    + VAE_TrooperArmor REPLACE researchViewY                                                                      -->
<!--                          WITH researchViewY  3.10                                                                -->
<!--    + VAE_TrooperArmor REPLACE label                                                                              -->
<!--                          WITH label  trooper armour                                                              -->
<!--    + VAE_TrooperArmor REPLACE description                                                                        -->
<!--                          WITH description  Craft trooper armour, a light semi-powered armour that is             -->
<!--                                             lightweight and relatively cheap to produce. Note that these also    -->
<!--                                             require advanced components.                                         -->
<!--    + VAE_SiegebreakerArmor IGNORE researchViewX                                                                  -->
<!--    + VAE_SiegebreakerArmor REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  3.10                                                           -->
<!--    + VAE_SiegebreakerArmor REPLACE label                                                                         -->
<!--                               WITH label  siegebreaker armour                                                    -->
<!--    + VAE_SiegebreakerArmor REPLACE description                                                                   -->
<!--                               WITH description  Craft siegebreaker armour, heavy powered armour that             -->
<!--                                                  significantly slows the user but provides advanced protection   -->
<!--                                                  at range. Note that these also require advanced components.     -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Armour Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VAE_LeatherTanning REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  1.24                                                              -->
<!--    + VAE_LeatherTanning REPLACE description                                                                      -->
<!--                            WITH description  Learn the process of tanning to craft thicker and more durable      -->
<!--                                               armours.                                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_LeatherTanning"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.24</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_LeatherTanning"]/description</xpath>
                    <value>
                        <description>Learn the process of tanning to craft thicker and more durable armours.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 4 (Y = 1.86)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VAE_MlitaryCamouflage REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  1.86                                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_MlitaryCamouflage"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.86</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VAE_HazardProtection REPLACE researchViewX                                                                  -->
<!--                              WITH researchViewX  4                                                               -->
<!--    + VAE_HazardProtection REPLACE researchViewY                                                                  -->
<!--                              WITH researchViewY  2.48                                                            -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_HazardProtection"]/researchViewX</xpath>
                    <value>
                        <researchViewX>4</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_HazardProtection"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 6 (Y = 3.10)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VAE_TrooperArmor REPLACE researchViewY                                                                      -->
<!--                          WITH researchViewY  3.10                                                                -->
<!--    + VAE_TrooperArmor REPLACE label                                                                              -->
<!--                          WITH label  trooper armour                                                              -->
<!--    + VAE_TrooperArmor REPLACE description                                                                        -->
<!--                          WITH description  Craft trooper armour, a light semi-powered armour that is             -->
<!--                                             lightweight and relatively cheap to produce. Note that these also    -->
<!--                                             require advanced components.                                         -->
<!--    + VAE_SiegebreakerArmor REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  3.10                                                           -->
<!--    + VAE_SiegebreakerArmor REPLACE label                                                                         -->
<!--                               WITH label  siegebreaker armour                                                    -->
<!--    + VAE_SiegebreakerArmor REPLACE description                                                                   -->
<!--                               WITH description  Craft siegebreaker armour, heavy powered armour that             -->
<!--                                                  significantly slows the user but provides advanced protection   -->
<!--                                                  at range. Note that these also require advanced components.     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_TrooperArmor"]/researchViewY</xpath>
                    <value>
                       <researchViewY>3.10</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_TrooperArmor"]/label</xpath>
                    <value>
                       <label>trooper armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_TrooperArmor"]/description</xpath>
                    <value>
                       <description>Craft trooper armour, a light semi-powered armour that is lightweight and relatively cheap to produce. Note that these also require advanced components.</description>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_SiegebreakerArmor"]/researchViewY</xpath>
                    <value>
                       <researchViewY>3.10</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_SiegebreakerArmor"]/label</xpath>
                    <value>
                       <label>siegebreaker armour</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VAE_SiegebreakerArmor"]/description</xpath>
                    <value>
                       <description>Craft siegebreaker armour, heavy powered armour that significantly slows the user but provides advanced protection at range. Note that these also require advanced components.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
