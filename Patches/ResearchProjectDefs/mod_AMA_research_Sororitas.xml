<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchProjectDef)  -  AdeptusMinistorum                                                         -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE label                                                                     -->
<!--                                   WITH label  Adeptus Ministorum                                                 -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE description                                                               -->
<!--                                   WITH description  Grants access to the STC templates used by the Adeptus       -->
<!--                                                      Ministorum.                                                 -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.10                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchProjectDef)  -  AdeptaSororitas                                                           -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE label                                                                     -->
<!--                                   WITH label  Adepta Sororitas                                                   -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE description                                                               -->
<!--                                   WITH description  Grants access to the STC templates used by the Adepta        -->
<!--                                                      Sororitas.                                                  -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.10                                                       -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchProjectDef)  -  AdeptusMinistorum                                                         -->
<!--  ==============================================================================================================  -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE label                                                                     -->
<!--                                   WITH label  Adeptus Ministorum                                                 -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE description                                                               -->
<!--                                   WITH description  Grants access to the STC templates used by the Adeptus       -->
<!--                                                      Ministorum.                                                 -->
<!--    + OG_Sororitas_Tech_Base_T1 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.10                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T1"]/label</xpath>
                    <value>
                        <label>Adeptus Ministorum</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T1"]/description</xpath>
                    <value>
                        <description>Grants access to the STC templates used by the Adeptus Ministorum.</description>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T1"]/researchViewY</xpath>
                    <value>
                        <researchViewY>4.10</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ResearchProjectDef)  -  AdeptaSororitas                                                           -->
<!--  ==============================================================================================================  -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE label                                                                     -->
<!--                                   WITH label  Adepta Sororitas                                                   -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE description                                                               -->
<!--                                   WITH description  Grants access to the STC templates used by the Adepta        -->
<!--                                                      Sororitas.                                                  -->
<!--    + OG_Sororitas_Tech_Base_T2 REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  4.10                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T2"]/label</xpath>
                    <value>
                        <label>Adepta Sororitas</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T2"]/description</xpath>
                    <value>
                        <description>Grants access to the STC templates used by the Adepta Sororitas.</description>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T2"]/researchViewY</xpath>
                    <value>
                        <researchViewY>4.10</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
