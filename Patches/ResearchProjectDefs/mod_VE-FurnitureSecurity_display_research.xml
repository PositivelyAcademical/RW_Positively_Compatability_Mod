<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--    + For VWE_TrenchWarfare IGNORE researchViewX                                                                  -->
<!--    + For VWE_TrenchWarfare REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  0.62                                                           -->
<!--    + For VFES_SentryGuns IGNORE researchViewX                                                                    -->
<!--    + For VFES_SentryGuns REPLACE researchViewY                                                                   -->
<!--                             WITH researchViewY  0.62                                                             -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Furniture Expanded - Security</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VWE_TrenchWarfare REPLACE researchViewY                                                                 -->
<!--                               WITH researchViewY  0.62                                                           -->
<!--    + For VFES_SentryGuns REPLACE researchViewY                                                                   -->
<!--                             WITH researchViewY  0.62                                                             -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VWE_TrenchWarfare"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.62</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_SentryGuns"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.62</researchViewY>
                    </value>
                </li>





















<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
