<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--    + For VFES_SentryGuns IGNORE researchViewX                                                                    -->
<!--    + For VFES_SentryGuns REPLACE researchViewY                                                                   -->
<!--                             WITH researchViewY  0.62                                                             -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--    + For VFES_Artillery IGNORE researchViewX                                                                     -->
<!--    + For VFES_Artillery REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  1.24                                                              -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + For VFES_MetalAlloysBarricades IGNORE researchViewX                                                         -->
<!--    + For VFES_MetalAlloysBarricades REPLACE researchViewY                                                        -->
<!--                                        WITH researchViewY  2.48                                                  -->
<!--    + For VFES_PulseChargedDefenses IGNORE researchViewX                                                          -->
<!--    + For VFES_PulseChargedDefenses REPLACE researchViewY                                                         -->
<!--                                       WITH researchViewY  2.48                                                   -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 6 (Y = 3.10)                                                             -->
<!--    + For VFES_MissileBarrage IGNORE researchViewX                                                                -->
<!--    + For VFES_MissileBarrage REPLACE researchViewY                                                               -->
<!--                                 WITH researchViewY  3.10                                                         -->
<!--    + For VFES_ConcealedDefenses IGNORE researchViewX                                                             -->
<!--    + For VFES_ConcealedDefenses IGNORE researchViewY                                                             -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 8 (Y = 5.58)                                                             -->
<!--    + For VFES_SiegeEquipment IGNORE researchViewX                                                                -->
<!--    + For VFES_SiegeEquipment REPLACE researchViewY                                                               -->
<!--                                 WITH researchViewY  5.58                                                         -->
<!--  ==============================================================================================================  -->
<!--  + NO_MATHCH VanillaWeaponsExpanded (ResearchProjectDef) - row 2 (Y = 0.62)                                      -->
<!--    + For VFES_TrenchWarfare IGNORE researchViewX                                                                 -->
<!--    + For VFES_TrenchWarfare REPLACE researchViewY                                                                -->
<!--                                WITH researchViewY  0.62                                                          -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Furniture Expanded - Security</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_SentryGuns REPLACE researchViewY                                                                   -->
<!--                             WITH researchViewY  0.62                                                             -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_SentryGuns"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.62</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 3 (Y = 1.24)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_Artillery REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  1.24                                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_Artillery"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.24</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_MetalAlloysBarricades REPLACE researchViewY                                                        -->
<!--                                        WITH researchViewY  2.48                                                  -->
<!--    + For VFES_PulseChargedDefenses REPLACE researchViewY                                                         -->
<!--                                       WITH researchViewY  2.48                                                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_MetalAlloysBarricades"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_PulseChargedDefenses"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 6 (Y = 3.10)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_MissileBarrage REPLACE researchViewY                                                               -->
<!--                                 WITH researchViewY  3.10                                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_MissileBarrage"]/researchViewY</xpath>
                    <value>
                        <researchViewY>3.10</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 8 (Y = 5.58)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_SiegeEquipment REPLACE researchViewY                                                               -->
<!--                                 WITH researchViewY  5.58                                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFES_SiegeEquipment"]/researchViewY</xpath>
                    <value>
                        <researchViewY>5.58</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + NO_MATHCH VanillaWeaponsExpanded (ResearchProjectDef) - row 2 (Y = 0.62)                                      -->
<!--  ==============================================================================================================  -->
<!--    + For VFES_TrenchWarfare REPLACE researchViewY                                                                -->
<!--                                WITH researchViewY  0.62                                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Weapons Expanded</li>
                    </mods>
                    <nomatch Class="PatchOperationReplace">
                        <xpath>/Defs/ResearchProjectDef[defName="VFES_TrenchWarfare"]/researchViewY</xpath>
                        <value>
                            <researchViewY>0.62</researchViewY>
                        </value>
                    </nomatch>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
