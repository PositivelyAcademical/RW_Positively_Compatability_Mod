<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + If MATCH 'Vanilla Furniture Expanded'                                                                      -->
<!--       + For BasicClimateControl REPLACE prerequisites                                                            -->
<!--                                    WITH hiddenPrerequisites li  AirConditioning                                  -->
<!--                                                             li  TubeTelevision                                   -->
<!--  ==============================================================================================================  -->
<!--     + If NO_MATCH 'Vanilla Furniture Expanded'                                                                   -->
<!--       + For BasicClimateControl REPLACE prerequisites                                                            -->
<!--                                    WITH hiddenPrerequisites li  AirConditioning                                  -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Centralized Climate Control (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + If MATCH 'Vanilla Furniture Expanded'                                                                      -->
<!--  ==============================================================================================================  -->
<!--       + For BasicClimateControl REPLACE prerequisites                                                            -->
<!--                                    WITH hiddenPrerequisites li  AirConditioning                                  -->
<!--                                                             li  TubeTelevision                                   -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ResearchProjectDef[defName="BasicClimateControl"]/prerequisites</xpath>
                                <value>
                                    <hiddenPrerequisites>
                                        <li>AirConditioning</li>
                                        <li>TubeTelevision</li>
                                    </hiddenPrerequisites>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
                        </operations>
                    </match>

                    <nomatch Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + If NO_MATCH 'Vanilla Furniture Expanded'                                                                   -->
<!--  ==============================================================================================================  -->
<!--       + For BasicClimateControl REPLACE prerequisites                                                            -->
<!--                                    WITH hiddenPrerequisites li  AirConditioning                                  -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ResearchProjectDef[defName="BasicClimateControl"]/prerequisites</xpath>
                                <value>
                                    <hiddenPrerequisites>
                                        <li>AirConditioning</li>
                                    </hiddenPrerequisites>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
                        </operations>
                    </nomatch>

                </li>
            </operations>
        </match>
    </Operation>

</Patch>
