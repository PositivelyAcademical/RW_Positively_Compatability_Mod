<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchProjectDef                                                                             -->
<!--       + For WDReinforcedConcrete ADD tab  POS_ResearchTab                                                        -->
<!--       + For WDReinforcedConcrete REPLACE researchViewX                                                           -->
<!--                                     WITH researchViewX  0                                                        -->
<!--       + For WDReinforcedConcrete REPLACE researchViewY                                                           -->
<!--                                     WITH researchViewY  5.4                                                      -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[WD] Simple Concrete</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - ResearchProjectDef                                                                             -->
<!--  ==============================================================================================================  -->
<!--       + For WDReinforcedConcrete ADD tab  POS_ResearchTab                                                        -->
<!--       + For WDReinforcedConcrete REPLACE researchViewX                                                           -->
<!--                                     WITH researchViewX  0                                                        -->
<!--       + For WDReinforcedConcrete REPLACE researchViewY                                                           -->
<!--                                     WITH researchViewY  5.4                                                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="WDReinforcedConcrete"]</xpath>
                    <value>
                        <tab>POS_ResearchTab</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="WDReinforcedConcrete"]/researchViewX</xpath>
                    <value>
                        <researchViewX>0</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="WDReinforcedConcrete"]/researchViewY</xpath>
                    <value>
                        <researchViewY>5.4</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
