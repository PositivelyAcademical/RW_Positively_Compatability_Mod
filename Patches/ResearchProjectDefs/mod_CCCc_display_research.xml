<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--       + For BasicClimateControl REPLACE researchViewX 2 with 7                                                   -->
<!--       + For BasicClimateControl REPLACE researchViewY 5 with                                                     -->
<!--       + For IndustrialClimateControl REPLACE researchViewX 2 with 8                                              -->
<!--       + For IndustrialClimateControl REPLACE researchViewY 5 with                                                -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Centralized Climate Control (Continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For BasicClimateControl REPLACE researchViewX 2 with 7                                                   -->
<!--       + For BasicClimateControl REPLACE researchViewY 5 with                                                     -->
<!--       + For IndustrialClimateControl REPLACE researchViewX 2 with 8                                              -->
<!--       + For IndustrialClimateControl REPLACE researchViewY 5 with                                                -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="BasicClimateControl"]/researchViewX</xpath>
                    <value>
                        <researchViewX>7</researchViewX>
                    </value>
                </li>

                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="BasicClimateControl"]/researchViewY</xpath>
                    <value>
                        <researchViewY>6.2</researchViewY>
                    </value>
                </li>

                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="IndustrialClimateControl"]/researchViewX</xpath>
                    <value>
                        <researchViewX>8</researchViewX>
                    </value>
                </li>

                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="IndustrialClimateControl"]/researchViewY</xpath>
                    <value>
                        <researchViewY>6.2</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
