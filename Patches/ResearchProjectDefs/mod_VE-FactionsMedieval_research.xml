<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - move from Main                                                               -->
<!--    + VFEM_HeavyCrossbow ADD tab  VanillaExpanded                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE researchViewX                                                                    -->
<!--                            WITH researchViewX  2                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  0                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE description                                                                      -->
<!--                            WITH description  Construct heavy crossbows, capable of firing a projectile           -->
<!--                                               unstoppable by most man-made armours.                              -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--    + VFEM_NobleMedievalApparel REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  2                                                          -->
<!--    + VFEM_NobleMedievalApparel REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  0.62                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 4 (Y = 1.86)                                                             -->
<!--    + VFEM_PlagueMask IGNORE researchViewX                                                                        -->
<!--    + VFEM_PlagueMask REPLACE researchViewY                                                                       -->
<!--                         WITH researchViewY  1.86                                                                 -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + VFEM_TreeHealroot IGNORE researchViewX                                                                      -->
<!--    + VFEM_TreeHealroot REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--    + VFEM_MeatSmoking IGNORE researchViewX                                                                       -->
<!--    + VFEM_MeatSmoking REPLACE researchViewY                                                                      -->
<!--                          WITH researchViewY  2.48                                                                -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Medieval</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - move from Main                                                               -->
<!--  ==============================================================================================================  -->
<!--    + VFEM_HeavyCrossbow ADD tab  VanillaExpanded                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE researchViewX                                                                    -->
<!--                            WITH researchViewX  2                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE researchViewY                                                                    -->
<!--                            WITH researchViewY  0                                                                 -->
<!--    + VFEM_HeavyCrossbow REPLACE description                                                                      -->
<!--                            WITH description  Construct heavy crossbows, capable of firing a projectile           -->
<!--                                               unstoppable by most man-made armours.                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                <xpath>/Defs/ResearchProjectDef[defName="VFEM_HeavyCrossbow"]</xpath>
                    <value>
                        <tab>VanillaExpanded</tab>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_HeavyCrossbow"]/researchViewX</xpath>
                    <value>
                        <researchViewX>2</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_HeavyCrossbow"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_HeavyCrossbow"]/description</xpath>
                    <value>
                        <description>Construct heavy crossbows, capable of firing a projectile unstoppable by most man-made armours.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 2 (Y = 0.62)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFEM_NobleMedievalApparel REPLACE researchViewX                                                             -->
<!--                                   WITH researchViewX  2                                                          -->
<!--    + VFEM_NobleMedievalApparel REPLACE researchViewY                                                             -->
<!--                                   WITH researchViewY  0.62                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_NobleMedievalApparel"]/researchViewX</xpath>
                    <value>
                        <researchViewX>2</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_NobleMedievalApparel"]/researchViewY</xpath>
                    <value>
                        <researchViewY>0.62</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 4 (Y = 1.86)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFEM_PlagueMask REPLACE researchViewY                                                                       -->
<!--                         WITH researchViewY  1.86                                                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_PlagueMask"]/researchViewY</xpath>
                    <value>
                        <researchViewY>1.86</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFEM_TreeHealroot REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--    + VFEM_MeatSmoking REPLACE researchViewY                                                                      -->
<!--                          WITH researchViewY  2.48                                                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_TreeHealroot"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFEM_MeatSmoking"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
