<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 11 (Y = 6.20)                                                            -->
<!--    + For VBE_Writing REPLACE researchViewX                                                                       -->
<!--                         WITH researchViewX  2                                                                    -->
<!--    + For VBE_Writing REPLACE researchViewY                                                                       -->
<!--                         WITH researchViewY  6.20                                                                 -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
        <li>Vanilla Books Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 11 (Y = 6.20)                                                            -->
<!--  ==============================================================================================================  -->
<!--    + For VBE_Writing REPLACE researchViewX                                                                       -->
<!--                         WITH researchViewX  2                                                                    -->
<!--    + For VBE_Writing REPLACE researchViewY                                                                       -->
<!--                         WITH researchViewY  6.20                                                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VBE_Writing"]/researchViewX</xpath>
                    <value>
                        <researchViewX>2</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VBE_Writing"]/researchViewY</xpath>
                    <value>
                        <researchViewY>6.20</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
