<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--    + VFE_Manufacturing REPLACE researchViewX                                                                     -->
<!--                           WITH researchViewX  3                                                                  -->
<!--    + VFE_Manufacturing REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Production</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES (ResearchProjectDef) - row 5 (Y = 2.48)                                                             -->
<!--  ==============================================================================================================  -->
<!--    + VFE_Manufacturing REPLACE researchViewX                                                                     -->
<!--                           WITH researchViewX  3                                                                  -->
<!--    + VFE_Manufacturing REPLACE researchViewY                                                                     -->
<!--                           WITH researchViewY  2.48                                                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Manufacturing"]/researchViewX</xpath>
                    <value>
                        <researchViewX>3</researchViewX>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="VFE_Manufacturing"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.48</researchViewY>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
