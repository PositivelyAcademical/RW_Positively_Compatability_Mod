<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Vanilla Apparel Expanded                                                                    -->
<!--       + For OG_Imperial_Tech_Apparel REPLACE prerequisites                                                       -->
<!--                                         WITH prerequisites VAE_MilitaryClothing                                  -->
<!--  ==============================================================================================================  -->
<!--     + Requires NO_MATCH Vanilla Apparel Expanded                                                                 -->
<!--       + For OG_Imperial_Tech_Apparel REPLACE prerequisites                                                       -->
<!--                                         WITH prerequisites ComplexClothing                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--       + For OG_Imperial_Tech_Apparel AFTER baseCost                                                              -->
<!--                                     INSERT hiddenPrerequisites OG_Imperial_Tech_Base_T0                          -->
<!--       + For OG_Imperial_Tech_Base_T0 prerequisites REPLACE Electricity with Machining                            -->
<!--       + For OG_Imperial_Tech_Weapons_Bolt ADD prerequisites PrecisionRifling                                     -->
<!--       + For OG_Imperial_Tech_Wargear_ServoSkull prerequisites REPLACE with OG_Imperial_Tech_Base_T0              -->
<!--       + For OG_Imperial_Tech_Wargear_ServoSkull modExtensions li Include ADD Militarum                           -->
<!--       + For OG_Imperial_Tech_Wargear_Shield REPLACE prerequisites                                                -->
<!--                                                WITH prerequisites OG_Imperial_Tech_Apparel_Armour_T3             -->
<!--                                                                   ShieldBelt                                     -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Apparel Expanded</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Vanilla Apparel Expanded                                                                    -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Apparel REPLACE prerequisites                                                       -->
<!--                                         WITH prerequisites VAE_MilitaryClothing                                  -->
<!--  ==============================================================================================================  -->
                            <li Class = "PatchOperationReplace">
                                <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Apparel"]/prerequisites</xpath>
                                <value>
                                    <prerequisites>
                                        <li>VAE_MilitaryClothing</li>
                                    </prerequisites>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
                        </operations>
                    </match>

                    <nomatch Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires NO_MATCH Vanilla Apparel Expanded                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Apparel REPLACE prerequisites                                                       -->
<!--                                         WITH prerequisites ComplexClothing                                       -->
<!--  ==============================================================================================================  -->
                            <li Class = "PatchOperationReplace">
                                <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Apparel"]/prerequisites</xpath>
                                <value>
                                    <prerequisites>
                                        <li>ComplexClothing</li>
                                    </prerequisites>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
                        </operations>
                    </nomatch>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Apparel AFTER baseCost                                                              -->
<!--                                     INSERT hiddenPrerequisites OG_Imperial_Tech_Base_T0                          -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationInsert">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Apparel"]/baseCost</xpath>
                    <value>
                        <hiddenPrerequisites>
                            <li>OG_Imperial_Tech_Base_T0</li>
                        </hiddenPrerequisites>
                    </value>
                </li>


<!--  ==============================================================================================================  -->
<!--     + ALL_CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Base_T0 prerequisites REPLACE Electricity with Machining                            -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Base_T0"]/prerequisites/li</xpath>
                    <value>
                        <li>Machining</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Weapons_Bolt ADD prerequisites PrecisionRifling                                     -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Weapons_Bolt"]/prerequisites</xpath>
                    <value>
                        <li>PrecisionRifling</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Wargear_ServoSkull prerequisites REPLACE with OG_Imperial_Tech_Base_T0              -->
<!--       + For OG_Imperial_Tech_Wargear_ServoSkull modExtensions li Include ADD Militarum                           -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Wargear_ServoSkull"]/prerequisites</xpath>
                    <value>
                        <prerequisites>
                            <li>OG_Imperial_Tech_Base_T0</li>
                        </prerequisites>
                    </value>
                </li>

                <li Class = "PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Wargear_ServoSkull"]/modExtensions/li/Include</xpath>
                    <value>
                        <li>Militarum</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Imperial_Tech_Wargear_Shield REPLACE prerequisites                                                -->
<!--                                                WITH prerequisites OG_Imperial_Tech_Apparel_Armour_T3             -->
<!--                                                                   ShieldBelt                                     -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Imperial_Tech_Wargear_Shield"]/prerequisites</xpath>
                    <value>
                        <prerequisites>
                            <li>OG_Imperial_Tech_Apparel_Armour_T3</li>
                            <li>ShieldBelt</li>
                        </prerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
