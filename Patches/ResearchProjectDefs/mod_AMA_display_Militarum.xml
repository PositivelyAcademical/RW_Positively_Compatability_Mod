<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Militarum                                                                                      -->
<!--       + For OG_Militarum_Tech_Base_T0 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--       + For OG_Militarum_Tech_Base_T1 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--       + For OG_Militarum_Tech_Base_T2 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Militarum                                                                                      -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Militarum_Tech_Base_T1 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--       + For OG_Militarum_Tech_Base_T2 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--       + For OG_Militarum_Tech_Base_T3 REPLACE researchViewY 2.00 with 2.75                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T1"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.75</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T2"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.75</researchViewY>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Militarum_Tech_Base_T3"]/researchViewY</xpath>
                    <value>
                        <researchViewY>2.75</researchViewY>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
