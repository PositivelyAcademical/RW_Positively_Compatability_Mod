<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--       + For OG_DarkEldar_Tech_Apparel_Armour_T2 prerequisites ADD OG_DarkEldar_Tech_Base_T2                      -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For OG_DarkEldar_Tech_Apparel_Armour_T2 prerequisites ADD OG_DarkEldar_Tech_Base_T2                      -->
<!--  ==============================================================================================================  -->
                <li Class = "PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_DarkEldar_Tech_Apparel_Armour_T2"]/prerequisites</xpath>
                    <value>
                        <li>OG_DarkEldar_Tech_Base_T2</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
