    <Operation Class="PatchOperationSequence">
        <operations>

<!--  ==============================================================================================================  -->
<!--     + MATCH ExtendedProstheticsAndOrganEngineering                                                               -->
<!--             HarvestOrgansPostMortem                                                                              -->
<!--  ==============================================================================================================  -->
<!--    + /Defs ADD ResearchTabDef WITH defName POS_ResearchTab_Medical                                               -->
<!--                                    label  Medical                                                                -->
<!--  ==============================================================================================================  -->
            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Expanded Prosthetics and Organ Engineering</li>
                    <li>Harvest Organs Post Mortem</li>
                </mods>

                <match Class="PatchOperationInsert">
                    <xpath>/Defs/ResearchTabDef[defName="Main"]</xpath>
                    <value>
                        <ResearchTabDef>
                            <defName>POS_ResearchTab_Medical</defName>
                            <label>Medical</label>
                        </ResearchTabDef>
                    </value>
                </match>

            </li>

<!--  ==============================================================================================================  -->
<!--  + MATCH ArmorRacks                                                                                              -->
<!--          CentralizedClimateControl                                                                               -->
<!--          CoalExpanded                                                                                            -->
<!--          CraftablePlasteel                                                                                       -->
<!--          DoorsExpanded                                                                                           -->
<!--          GoldAndSilverIngots                                                                                     -->
<!--          RaiseTheRoof                                                                                            -->
<!--          RT_Fuse                                                                                                 -->
<!--          RT_PowerSwitch                                                                                          -->
<!--          RT_SolarFlareShield                                                                                     -->
<!--          SmeltedStone                                                                                            -->
<!--          SimpleConcrete                                                                                          -->
<!--  ==============================================================================================================  -->
<!--    + AFTER Main                                                                                                  -->
<!--          INSERT POS_ResearchTab WITH label  Assorted Mods                                                        -->
<!--  ==============================================================================================================  -->
            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Armor Racks</li>
                    <li>Centralized Climate Control (Continued)</li>
                    <li>Coal Expanded (Continued)</li>
                    <li>Craftable Plasteel</li>
                    <li>Doors Expanded</li>
                    <li><![CDATA[Gold & Silver Ingots]]></li>
                    <li>Raise The Roof 1.3</li>
                    <li>RT Fuse</li>
                    <li>RT Power Switch</li>
                    <li>RT Solar Flare Shield</li>
                    <li>Smelted Stone</li>
                    <li>[WD] Simple Concrete</li>
                </mods>

                <match Class="PatchOperationInsert">
                    <xpath>/Defs/ResearchTabDef[defName="Main"]</xpath>
                    <value>
                        <ResearchTabDef>
                            <defName>POS_ResearchTab</defName>
                            <label>Assorted Mods</label>
                        </ResearchTabDef>
                    </value>
                </match>

            </li>

<!--  ==============================================================================================================  -->
        </operations>
    </Operation>

</Patch>
