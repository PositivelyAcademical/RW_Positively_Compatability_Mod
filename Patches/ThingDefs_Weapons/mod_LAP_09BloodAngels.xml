<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  BloodAngelsPrimarchSword                                                            -->
<!--    + LAP_WEAP_Blade_Encarmine recipeMaker REPLACE researchPrerequisite                                           -->
<!--                                              WITH researchPrerequisites li  LAP_Tech_BloodAngels                 -->
<!--                                                                         li  OG_Common_Tech_Weapons_Force         -->
<!--                                                                         li  POS_Tech_PrimarchWargear             -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  BloodAngelsPrimarchSword                                                            -->
<!--  ==============================================================================================================  -->
<!--    + LAP_WEAP_Blade_Encarmine recipeMaker REPLACE researchPrerequisite                                           -->
<!--                                              WITH researchPrerequisites li  LAP_Tech_BloodAngels                 -->
<!--                                                                         li  OG_Common_Tech_Weapons_Force         -->
<!--                                                                         li  POS_Tech_PrimarchWargear             -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_Blade_Encarmine"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_BloodAngels</li>
                            <li>OG_Common_Tech_Weapons_Powered_Special</li>
                            <li>POS_Tech_PrimarchWargear</li>
                        </researchPrerequisites>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
