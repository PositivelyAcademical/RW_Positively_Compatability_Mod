<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - slug guns and autoguns                                                                         -->
<!--       + For OGC_Gun_AutoPistol REPLACE label                                                                     -->
<!--                                   WITH label autopistol (warp tainted)                                           -->
<!--       + For OGC_Gun_AutoGun REPLACE label                                                                        -->
<!--                                WITH label autogun (warp tainted)                                                 -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - las weapons                                                                                    -->
<!--       + For OGC_Gun_LasPistol REPLACE label                                                                      -->
<!--                                  WITH label laspistol (warp tainted)                                             -->
<!--       + For OGC_Gun_LasGun REPLACE label                                                                         -->
<!--                               WITH label lasgun (warp tainted)                                                   -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - slug guns and autoguns                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For OGC_Gun_AutoPistol REPLACE label                                                                     -->
<!--                                   WITH label autopistol (warp tainted)                                           -->
<!--       + For OGC_Gun_AutoGun REPLACE label                                                                        -->
<!--                                WITH label autogun (warp tainted)                                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_AutoPistol"]/label</xpath>
                    <value>
                        <label>autopistol (warp tainted)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_AutoGun"]/label</xpath>
                    <value>
                        <label>autogun (warp tainted)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - las weapons                                                                                    -->
<!--  ==============================================================================================================  -->
<!--       + For OGC_Gun_LasPistol REPLACE label                                                                      -->
<!--                                  WITH label laspistol (warp tainted)                                             -->
<!--       + For OGC_Gun_LasGun REPLACE label                                                                         -->
<!--                               WITH label lasgun (warp tainted)                                                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_LasPistol"]/label</xpath>
                    <value>
                        <label>laspistol (warp tainted)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_LasGun"]/label</xpath>
                    <value>
                        <label>lasgun (warp tainted)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
