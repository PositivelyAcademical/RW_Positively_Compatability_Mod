<?xml version="1.0" encoding="UTF-8"?>

<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL CASES - slug guns and autoguns                                                                            -->
<!--    + OGC_Gun_AutoPistol recipeMaker ADD researchPrerequisites OG_Chaos_Tech_Base_T1                              -->
<!--                                                               BlowbackOperation                                  -->
<!--    + OGC_Gun_AutoGun recipeMaker ADD researchPrerequisites OG_Chaos_Tech_Base_T1                                 -->
<!--                                                            GasOperation                                          -->
<!--  ==============================================================================================================  -->
<!--  + ALL CASES - las weapons                                                                                       -->
<!--    + OGC_Gun_LasPistol REPLACE researchPrerequisites                                                             -->
<!--                           WITH researchPrerequisites OG_Chaos_Tech_Base_T1                                       -->
<!--                                                      OG_Common_Tech_Weapons_Laser                                -->
<!--    + OGC_Gun_LasGun REPLACE researchPrerequisites                                                                -->
<!--                           WITH researchPrerequisites OG_Chaos_Tech_Base_T2                                       -->
<!--                                                      OG_Common_Tech_Weapons_Laser                                -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL CASES - slug guns and autoguns                                                                            -->
<!--  ==============================================================================================================  -->
<!--    + OGC_Gun_AutoPistol recipeMaker ADD researchPrerequisites OG_Chaos_Tech_Base_T1                              -->
<!--                                                               BlowbackOperation                                  -->
<!--    + OGC_Gun_AutoGun recipeMaker ADD researchPrerequisites OG_Chaos_Tech_Base_T1                                 -->
<!--                                                            GasOperation                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_AutoPistol"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Chaos_Tech_Base_T1</li>
                            <li>BlowbackOperation</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_AutoGun"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Chaos_Tech_Base_T1</li>
                            <li>GasOperation</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL CASES - las weapons                                                                                       -->
<!--  ==============================================================================================================  -->
<!--    + OGC_Gun_LasPistol REPLACE researchPrerequisites                                                             -->
<!--                           WITH researchPrerequisites OG_Chaos_Tech_Base_T2                                       -->
<!--                                                      OG_Common_Tech_Weapons_Laser                                -->
<!--    + OGC_Gun_LasGun REPLACE researchPrerequisites                                                                -->
<!--                           WITH researchPrerequisites OG_Chaos_Tech_Base_T2                                       -->
<!--                                                      OG_Common_Tech_Weapons_Laser                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_LasPistol"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Chaos_Tech_Base_T2</li>
                            <li>OG_Common_Tech_Weapons_Laser</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGC_Gun_LasGun"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Chaos_Tech_Base_T2</li>
                            <li>OG_Common_Tech_Weapons_Laser</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
