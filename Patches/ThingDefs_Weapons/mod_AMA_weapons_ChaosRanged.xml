<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - slug and auto weapons                                         -->
<!--       + For OGC_Gun_RAutocannon REMOVE ThingDef                                                                  -->
<!--       + For OGC_Gun_ReaperChaingun REMOVE ThingDef                                                               -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - las weapons                                                   -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - flame weapons                                                 -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - bolt weapons                                                  -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - melta weapons                                                 -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - plasma weapons                                                -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - combi weapons                                                 -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - suis generis weapons                                          -->
<!--  ==============================================================================================================  -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - slug and auto weapons                                       -->
<!--       + For OGC_Gun_RAutocannon REPLACE label                                                                    -->
<!--                                    WITH label Reaper autocannon (Sol Militaris pattern)                          -->
<!--       + For OGC_Gun_RAutocannon REPLACE researchPrerequisites                                                    -->
<!--                                    WITH researchPrerequisites OG_Chaos_Tech_Base_T3                              -->
<!--                                                               OG_Common_Tech_Weapons_Heavy                       -->
<!--                                                               HeavyTurrets                                       -->
<!--       + For OGC_Gun_ReaperChaingun REPLACE label                                                                 -->
<!--                                       WITH label rotor cannon (Sol Militaris pattern)                            -->
<!--       + For OGC_Gun_ReaperChaingun REPLACE researchPrerequisites                                                 -->
<!--                                       WITH researchPrerequisites OG_Chaos_Tech_Base_T3                           -->
<!--                                                                  OG_Common_Tech_Weapons_Heavy                    -->
<!--                                                                  MultibarrelWeapons                              -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - las weapons                                                 -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - flame weapons                                               -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - bolt weapons                                                -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - melta weapons                                               -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - plasma weapons                                              -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - combi weapons                                               -->
<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - suis generis weapons                                        -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Legiones Astartes: Primarch</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Legiones Astartes: Primarch - slug and auto weapons                                         -->
<!--       + For OGC_Gun_RAutocannon REMOVE ThingDef                                                                  -->
<!--       + For OGC_Gun_ReaperChaingun REMOVE ThingDef                                                               -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_RAutocannon"]</xpath>
                            </li>

                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_ReaperChaingun"]</xpath>
                            </li>


<!--  ==============================================================================================================  -->
                        </operations>
                    </match>

                    <nomatch Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires NOMATCH Legiones Astartes: Primarch - slug guns and autoguns                                      -->
<!--  ==============================================================================================================  -->
<!--       + For OGC_Gun_RAutocannon REPLACE label                                                                    -->
<!--                                    WITH label Reaper autocannon (Sol Militaris pattern)                          -->
<!--       + For OGC_Gun_RAutocannon REPLACE researchPrerequisites                                                    -->
<!--                                    WITH researchPrerequisites OG_Chaos_Tech_Base_T3                              -->
<!--                                                               OG_Common_Tech_Weapons_Heavy                       -->
<!--                                                               HeavyTurrets                                       -->
<!--       + For OGC_Gun_ReaperChaingun REPLACE label                                                                 -->
<!--                                       WITH label rotor cannon (Sol Militaris pattern)                            -->
<!--       + For OGC_Gun_ReaperChaingun REPLACE researchPrerequisites                                                 -->
<!--                                       WITH researchPrerequisites OG_Chaos_Tech_Base_T3                           -->
<!--                                                                  OG_Common_Tech_Weapons_Heavy                    -->
<!--                                                                  MultibarrelWeapons                              -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_RAutocannon"]/label</xpath>
                                <value>
                                    <label>Reaper autocannon (Sol Militaris pattern)</label>
                                </value>
                            </li>

                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_RAutocannon"]/recipeMaker/researchPrerequisites</xpath>
                                <value>
                                    <researchPrerequisites>
                                        <li>OG_Chaos_Tech_Base_T3</li>
                                        <li>OG_Common_Tech_Weapons_Heavy</li>
                                        <li>HeavyTurrets</li>
                                    </researchPrerequisites>
                                </value>
                            </li>

                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_ReaperChaingun"]/label</xpath>
                                <value>
                                    <label>rotor cannon (Sol Militaris pattern)</label>
                                </value>
                            </li>

                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="OGC_Gun_ReaperChaingun"]/recipeMaker/researchPrerequisites</xpath>
                                <value>
                                    <researchPrerequisites>
                                        <li>OG_Chaos_Tech_Base_T3</li>
                                        <li>OG_Common_Tech_Weapons_Heavy</li>
                                        <li>MultibarrelWeapons</li>
                                    </researchPrerequisites>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
                        </operations>
                    </nomatch>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
