<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  LegionesChainsword                                                                  -->
<!--    + LAP_WEAP_ChainSword REPLACE label                                                                           -->
<!--                             WITH label  chainsword (Proteus pattern)                                             -->
<!--    + LAP_WEAP_ChainSword REPLACE description                                                                     -->
<!--                             WITH description  The chainsword is one of the preferred close combat melee weapons  -->
<!--                                                of the Crusade era military forces of the Imperium. It is most    -->
<!--                                                commonly seen wielded by the Legiones Astartes, where it is       -->
<!--                                                usually paired with a bolt pistol.\n\nThe chainsword is           -->
<!--                                                essentially a single-edged sword, with a blade comprised of       -->
<!--                                                monomolecular-edged teeth driven on a motorised chain.            -->
<!--    + LAP_WEAP_ChainSword recipeMaker REPLACE researchPrerequisite                                                -->
<!--                                         WITH researchPrerequisites li  LAP_Tech_Basic                            -->
<!--                                                                    li  Machining                                 -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  LegionesChainaxe                                                                    -->
<!--    + LAP_WEAP_ChainAxe REPLACE label                                                                             -->
<!--                           WITH label  chainaxe (Proteus pattern)                                                 -->
<!--    + LAP_WEAP_ChainAxe REPLACE description                                                                       -->
<!--                           WITH description  A chainaxe is a brutal hand-to-hand motorised chain weapon crafted   -->
<!--                                              in the form of a great one or two-handed axe. The biting action of  -->
<!--                                              the whirling row of monomolecular teeth means these weapons can     -->
<!--                                              hack through both flesh and armour with ease.                       -->
<!--    + LAP_WEAP_ChainAxe recipeMaker REPLACE researchPrerequisite                                                  -->
<!--                                       WITH researchPrerequisites li  LAP_Tech_Basic                              -->
<!--                                                                  li  OG_Common_Tech_Weapons_Special              -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  LegionesChainsword                                                                  -->
<!--  ==============================================================================================================  -->
<!--    + LAP_WEAP_ChainSword REPLACE label                                                                           -->
<!--                             WITH label  chainsword (Proteus pattern)                                             -->
<!--    + LAP_WEAP_ChainSword REPLACE description                                                                     -->
<!--                             WITH description  The chainsword is one of the preferred close combat melee weapons  -->
<!--                                                of the Crusade era military forces of the Imperium. It is most    -->
<!--                                                commonly seen wielded by the Legiones Astartes, where it is       -->
<!--                                                usually paired with a bolt pistol.\n\nThe chainsword is           -->
<!--                                                essentially a single-edged sword, with a blade comprised of       -->
<!--                                                monomolecular-edged teeth driven on a motorised chain.            -->
<!--    + LAP_WEAP_ChainSword recipeMaker REPLACE researchPrerequisite                                                -->
<!--                                         WITH researchPrerequisites li  LAP_Tech_Basic                            -->
<!--                                                                    li  Machining                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainSword"]/label</xpath>
                    <value>
                        <label>chainsword (Proteus pattern)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainSword"]/description</xpath>
                    <value>
                        <description>The chainsword is one of the preferred close combat melee weapons of the Crusade era military forces of the Imperium. It is most commonly seen wielded by the Legiones Astartes, where it is usually paired with a bolt pistol.\n\nThe chainsword is essentially a single-edged sword, with a blade comprised of monomolecular-edged teeth driven on a motorised chain.</description>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainSword"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>Machining</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  LegionesChainaxe                                                                    -->
<!--  ==============================================================================================================  -->
<!--    + LAP_WEAP_ChainAxe REPLACE label                                                                             -->
<!--                           WITH label  chainaxe (Proteus pattern)                                                 -->
<!--    + LAP_WEAP_ChainAxe REPLACE description                                                                       -->
<!--                           WITH description  A chainaxe is a brutal hand-to-hand motorised chain weapon crafted   -->
<!--                                              in the form of a great one or two-handed axe. The biting action of  -->
<!--                                              the whirling row of monomolecular teeth means these weapons can     -->
<!--                                              hack through both flesh and armour with ease.                       -->
<!--    + LAP_WEAP_ChainAxe recipeMaker REPLACE researchPrerequisite                                                  -->
<!--                                       WITH researchPrerequisites li  LAP_Tech_Basic                              -->
<!--                                                                  li  OG_Common_Tech_Weapons_Special              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainAxe"]/label</xpath>
                    <value>
                        <label>chainaxe (Proteus pattern)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainAxe"]/description</xpath>
                    <value>
                        <description>A chainaxe is a brutal hand-to-hand motorised chain weapon crafted in the form of a great one or two-handed axe. The biting action of the whirling row of monomolecular teeth means these weapons can hack through both flesh and armour with ease.</description>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_ChainAxe"]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Common_Tech_Weapons_Special</li>
                        </researchPrerequisites>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
