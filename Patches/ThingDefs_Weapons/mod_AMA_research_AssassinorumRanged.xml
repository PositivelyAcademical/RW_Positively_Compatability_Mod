<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - slug and auto weapons                                                                          -->
<!--       + For OGI_Gun_ExitusPistol NO_CHANGE                                                                       -->
<!--       + For OGI_Gun_ExitusRifle NO_CHANGE                                                                        -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - bolt weapons                                                                                   -->
<!--       + For OGI_Gun_ExecutionerPistol REPLACE researchPrerequisites                                              -->
<!--                                          WITH researchPrerequisites OG_Assassinorum_Tech_Weapons_Eversor         -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - bolt weapons                                                                                   -->
<!--  ==============================================================================================================  -->
<!--       + For OGI_Gun_ExecutionerPistol REPLACE researchPrerequisites                                              -->
<!--                                          WITH researchPrerequisites OG_Assassinorum_Tech_Weapons_Eversor         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="OGI_Gun_ExecutionerPistol"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Assassinorum_Tech_Weapons_Eversor</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
