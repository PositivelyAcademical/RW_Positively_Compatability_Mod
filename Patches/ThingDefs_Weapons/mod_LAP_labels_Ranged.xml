<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--       + For LAP_WEAP_VolkiteSerpenta REPLACE label                                                               -->
<!--                                         WITH label volkite serpenta (Sol Militaris pattern)                      -->
<!--       + For LAP_WEAP_VolkiteCaliver REPLACE label                                                                -->
<!--                                        WITH label volkite caliver (Sol Militaris pattern)                        -->
<!--       + For LAP_WEAP_VolkiteCulverin REPLACE label                                                               -->
<!--                                         WITH label volkite culverin (Sol Militaris pattern)                      -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--       + For LAP_WEAP_RocketLaucher REPLACE label                                                                 -->
<!--                                       WITH label missile launcher (Sol Militaris pattern)                        -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - plasma weapons                                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_PlasmaCannon REPLACE label                                                                  -->
<!--                                      WITH label plasma cannon (Sol Militaris pattern)                            -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_PlasmaCannon"]/label</xpath>
                    <value>
                        <label>plasma cannon (Sol Militaris pattern)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_VolkiteSerpenta REPLACE label                                                               -->
<!--                                         WITH label volkite serpenta (Sol Militaris pattern)                      -->
<!--       + For LAP_WEAP_VolkiteCaliver REPLACE label                                                                -->
<!--                                        WITH label volkite caliver (Sol Militaris pattern)                        -->
<!--       + For LAP_WEAP_VolkiteCulverin REPLACE label                                                               -->
<!--                                         WITH label volkite culverin (Sol Militaris pattern)                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteSerpenta"]/label</xpath>
                    <value>
                        <label>volkite serpenta (Sol Militaris pattern)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteCaliver"]/label</xpath>
                    <value>
                        <label>volkite caliver (Sol Militaris pattern)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteCulverin"]/label</xpath>
                    <value>
                        <label>volkite culverin (Sol Militaris pattern)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_RocketLaucher REPLACE label                                                                 -->
<!--                                       WITH label missile launcher (Sol Militaris pattern)                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_RocketLaucher"]/label</xpath>
                    <value>
                        <label>missile launcher (Sol Militaris pattern)</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
