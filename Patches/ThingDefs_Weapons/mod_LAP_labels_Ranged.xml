<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--       + For LAP_WEAP_RocketLaucher REPLACE label                                                                 -->
<!--                                       WITH label missile launcher (Sol Militaris pattern)                        -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_RocketLaucher REPLACE label                                                                 -->
<!--                                       WITH label missile launcher (Sol Militaris pattern)                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_RocketLaucher"]/label</xpath>
                    <value>
                        <label>missile launcher (Sol Militaris pattern)</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
