                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_HeavyBolter"]/label</xpath>
                    <value>
                        <label>heavy bolter (Sol Militaris pattern)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - melta weapons                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_MeltaGun REPLACE label                                                                      -->
