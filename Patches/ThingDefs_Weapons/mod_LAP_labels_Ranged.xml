                        <label>plasma gun (Ryza patern)</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_PlasmaCannon"]/label</xpath>
                    <value>
                        <label>plasma cannon (Sol Militaris pattern)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_VolkiteSerpenta REPLACE label                                                               -->
<!--                                         WITH label volkite serpenta (Sol Militaris pattern)                      -->
