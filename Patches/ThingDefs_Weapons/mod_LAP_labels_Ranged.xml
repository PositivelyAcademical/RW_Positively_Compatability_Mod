<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - bolt weapons                                                                                   -->
<!--       + For LAP_WEAP_BoltPistol REPLACE label                                                                    -->
<!--                                    WITH label bolt pistol (Phobos pattern)                                       -->
<!--       + For LAP_WEAP_BoltGun REPLACE label                                                                       -->
<!--                                 WITH label boltgun (Phobos pattern)                                              -->
<!--       + For LAP_WEAP_CombiBolter REPLACE label                                                                   -->
<!--                                     WITH label combi-bolter (Phobos pattern)                                     -->
<!--       + For LAP_WEAP_HeavyBolter REPLACE label                                                                   -->
<!--                                     WITH label heavy bolter (Sol Militaris pattern)                              -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - melta weapons                                                                                  -->
<!--       + For LAP_WEAP_MeltaGun REPLACE label                                                                      -->
<!--                                  WITH label meltagun (Ryza pattern)                                              -->
<!--       + For LAP_WEAP_MultiMelta REPLACE label                                                                    -->
<!--                                    WITH label multi-melta (Sol Militaris pattern)                                -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - plasma weapons                                                                                 -->
<!--       + For LAP_WEAP_PlasmaPistol REPLACE label                                                                  -->
<!--                                      WITH label plasma pistol (Ryza pattern)                                     -->
<!--       + For LAP_WEAP_PlasmaGun REPLACE label                                                                     -->
<!--                                   WITH label plasma gun (Ryza pattern)                                           -->
<!--       + For LAP_WEAP_PlasmaCannon REPLACE label                                                                  -->
<!--                                      WITH label plasma cannon (Sol Militaris pattern)                            -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--       + For LAP_WEAP_VolkiteSerpenta REPLACE label                                                               -->
<!--                                         WITH label volkite serpenta (Sol Militaris pattern)                      -->
<!--       + For LAP_WEAP_VolkiteCaliver REPLACE label                                                                -->
<!--                                        WITH label volkite caliver (Sol Militaris pattern)                        -->
<!--       + For LAP_WEAP_VolkiteCulverin REPLACE label                                                               -->
<!--                                         WITH label volkite culverin (Sol Militaris pattern)                      -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--       + For LAP_WEAP_RocketLaucher REPLACE label                                                                 -->
<!--                                       WITH label missile launcher (Sol Militaris pattern)                        -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - flame weapons                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_HeavyFlamer REPLACE label                                                                   -->
<!--                                     WITH label heavy flamer (Phaestos pattern)                                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_HeavyFlamer"]/label</xpath>
                    <value>
                        <label>heavy flamer (Phaestos pattern)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - bolt weapons                                                                                   -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_BoltPistol REPLACE label                                                                    -->
<!--                                    WITH label bolt pistol (Phobos pattern)                                       -->
