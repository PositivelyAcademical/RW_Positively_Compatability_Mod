<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--       + For LAP_WEAP_VolkiteSerpenta recipeMaker REPLACE researchPrerequisites                                   -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--       + For LAP_WEAP_VolkiteCaliver recipeMaker REPLACE researchPrerequisites                                    -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--       + For LAP_WEAP_VolkiteCulverin recipeMaker REPLACE researchPrerequisites                                   -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--                                                                          li  OG_Common_Tech_Weapons_Heavy        -->
<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--       + For LAP_WEAP_RocketLaucher recipeMaker REPLACE researchPrerequisites                                     -->
<!--                                                   WITH researchPrerequisites li  LAP_Tech_Basic                  -->
<!--                                                                              li  OG_Common_Tech_Weapons_Heavy    -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - plasma weapons                                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_PlasmaPistol recipeMaker REPLACE researchPrerequisites                                      -->
<!--                                                  WITH researchPrerequisites li  LAP_Tech_Basic                   -->
<!--                                                                             li  OG_Common_Tech_Weapons_Plasma    -->
<!--       + For LAP_WEAP_PlasmaGun recipeMaker REPLACE researchPrerequisites                                         -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Common_Tech_Weapons_Plasma       -->
<!--       + For LAP_WEAP_PlasmaCannon recipeMaker REPLACE researchPrerequisites                                      -->
<!--                                                  WITH researchPrerequisites li  LAP_Tech_Basic                   -->
<!--                                                                             li  OG_Common_Tech_Weapons_Plasma    -->
<!--                                                                             li  OG_Common_Tech_Weapons_Heavy     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_PlasmaPistol"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Common_Tech_Weapons_Plasma</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_PlasmaGun"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Common_Tech_Weapons_Plasma</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_PlasmaCannon"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Common_Tech_Weapons_Plasma</li>
                            <li>OG_Common_Tech_Weapons_Heavy</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - volkite weapons                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_VolkiteSerpenta recipeMaker REPLACE researchPrerequisites                                   -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--       + For LAP_WEAP_VolkiteCaliver recipeMaker REPLACE researchPrerequisites                                    -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--       + For LAP_WEAP_VolkiteCulverin recipeMaker REPLACE researchPrerequisites                                   -->
<!--                                               WITH researchPrerequisites li  LAP_Tech_Basic                      -->
<!--                                                                          li  OG_Mechanicus_Tech_Weapons_Volkite  -->
<!--                                                                          li  OG_Common_Tech_Weapons_Heavy        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteSerpenta"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Mechanicus_Tech_Weapons_Volkite</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteCaliver"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Mechanicus_Tech_Weapons_Volkite</li>
                        </researchPrerequisites>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_VolkiteCulverin"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Mechanicus_Tech_Weapons_Volkite</li>
                            <li>OG_Common_Tech_Weapons_Heavy</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL_CASES - suis generis weapons                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_WEAP_RocketLaucher recipeMaker REPLACE researchPrerequisites                                     -->
<!--                                                   WITH researchPrerequisites li  LAP_Tech_Basic                  -->
<!--                                                                              li  OG_Common_Tech_Weapons_Heavy    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_RocketLaucher"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_Basic</li>
                            <li>OG_Common_Tech_Weapons_Heavy</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>

</Patch>
