<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For OGI_Gun_Vanaheim recipeMaker ADD researchPrerequisites OG_Militarum_Tech_Base_T1                     -->
<!--                                                                    GasOperation                                  -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGI_Gun_HeavyStubber REPLACE researchPrerequisites                                                   -->
<!--                                     WITH researchPrerequisites OG_Militarum_Tech_Base_T2                         -->
<!--                                                                OG_Common_Tech_Weapons_Special                    -->
<!--                                                                PrecisionRifling                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGI_Gun_HeavyStubber"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T2</li>
                            <li>OG_Common_Tech_Weapons_Special</li>
                            <li>PrecisionRifling</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGI_Gun_AutoCannon REPLACE researchPrerequisites                                                     -->
<!--                                   WITH researchPrerequisites POS_AMA_Astartes_Placeholder                        -->
<!--                                                              OG_Common_Tech_Weapons_Heavy                        -->
<!--                                                              HeavyTurrets                                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGI_Gun_AutoCannon"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>POS_AMA_Astartes_Placeholder</li>
                            <li>OG_Common_Tech_Weapons_Heavy</li>
                            <li>HeavyTurrets</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGI_Gun_Vanaheim recipeMaker ADD researchPrerequisites OG_Militarum_Tech_Base_T1                     -->
<!--                                                                    GasOperation                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGI_Gun_Vanaheim"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T1</li>
                            <li>GasOperation</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGI_Gun_OgrynRipperGun REPLACE researchPrerequisites                                                 -->
<!--                                       WITH researchPrerequisites OG_Militarum_Tech_Base_T3                       -->
<!--                                                                  OG_Common_Tech_Weapons_Special                  -->
<!--                                                                  PrecisionRifling                                -->
<!--  ==============================================================================================================  -->
            </operations>
        </match>
    </Operation>
</Patch>
