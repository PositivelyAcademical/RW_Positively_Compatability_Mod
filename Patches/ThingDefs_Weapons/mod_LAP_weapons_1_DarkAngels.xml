<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  DarkAngelsPrimarchPowerSword                                                        -->
<!--    + LAP_WEAP_LionSword recipeMaker REPLACE researchPrerequisite                                                 -->
<!--                                        WITH researchPrerequisites li  LAP_Tech_DarkAngels                        -->
<!--                                                                   li  OG_Common_Tech_Weapons_Powered             -->
<!--                                                                   li  LAP_Tech_Emperor                           -->
<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  DarkAngelsPrimarchChainSword                                                        -->
<!--    + LAP_WEAP_WolfBlade recipeMaker REPLACE researchPrerequisite                                                 -->
<!--                                        WITH researchPrerequisites li  LAP_Tech_DarkAngels                        -->
<!--                                                                   li  OG_Common_Tech_Weapons_Special             -->
<!--                                                                   li  LAP_Tech_Emperor                           -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  DarkAngelsPrimarchPowerSword                                                        -->
<!--  ==============================================================================================================  -->
<!--    + LAP_WEAP_LionSword recipeMaker REPLACE researchPrerequisite                                                 -->
<!--                                        WITH researchPrerequisites li  LAP_Tech_DarkAngels                        -->
<!--                                                                   li  OG_Common_Tech_Weapons_Powered             -->
<!--                                                                   li  LAP_Tech_Emperor                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_LionSword"]/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_DarkAngels</li>
                            <li>OG_Common_Tech_Weapons_Powered</li>
                            <li>LAP_Tech_Emperor</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--  + ALL_CASES  (ThingDef)  -  DarkAngelsPrimarchChainSword                                                        -->
<!--  ==============================================================================================================  -->
<!--    + LAP_WEAP_WolfBlade recipeMaker REPLACE researchPrerequisite                                                 -->
<!--                                        WITH researchPrerequisites li  LAP_Tech_DarkAngels                        -->
<!--                                                                   li  OG_Common_Tech_Weapons_Special             -->
<!--                                                                   li  LAP_Tech_Emperor                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LAP_WEAP_WolfBlade"]/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>LAP_Tech_DarkAngels</li>
                            <li>OG_Common_Tech_Weapons_Special</li>
                            <li>LAP_Tech_Emperor</li>
                        </researchPrerequisites>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
