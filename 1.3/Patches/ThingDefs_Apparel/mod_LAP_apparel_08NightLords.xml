<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty                                                                                     -->
<!--       + For LAP_Armour_NightLords_Armor ADD tags PrestigeCombatGear                                              -->
<!--       + For LAP_Armour_NightLords_Raptor ADD tags PrestigeCombatGear                                             -->
<!--       + For LAP_Armour_NightLords_Terminator ADD tags PrestigeCombatGear                                         -->
<!--       + For LAP_Armour_Curze_Armor ADD tags PrestigeCombatGear                                                   -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty (cont)                                                                              -->
<!--       + For LAP_Armour_NightLords_Helmet ADD tags PrestigeCombatGear                                             -->
<!--       + For LAP_Armour_NightLords_Terminator_Helmet ADD tags PrestigeCombatGear                                  -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty                                                                                     -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_NightLords_Armor ADD tags PrestigeCombatGear                                              -->
<!--       + For LAP_Armour_NightLords_Raptor ADD tags PrestigeCombatGear                                             -->
<!--       + For LAP_Armour_NightLords_Terminator ADD tags PrestigeCombatGear                                         -->
<!--       + For LAP_Armour_Curze_Armor ADD tags PrestigeCombatGear                                                   -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Raptor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Terminator"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_Curze_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty (cont)                                                                              -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_NightLords_Helmet ADD tags PrestigeCombatGear                                             -->
<!--       + For LAP_Armour_NightLords_Terminator_Helmet ADD tags PrestigeCombatGear                                  -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_NightLords_Terminator_Helmet"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
