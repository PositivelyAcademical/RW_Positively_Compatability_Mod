<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Reqyures MATCH Adaptus Mechanicus: Armoury                                                                 -->
<!--       + For Apparel_PackBroadshield REPLACE layer Belt with BeltWargear2                                         -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Adeptus Mechanicus: Armoury</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Reqyures MATCH Adaptus Mechanicus: Armoury                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_PackBroadshield REPLACE layer Belt with BeltWargear2                                         -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="Apparel_PackBroadshield"]/apparel/layers/li[1]</xpath>
                                <value>
                                    <li>BeltWargear2</li>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
