<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For OGIG_Apparel_UniformShirt ADD recipeMaker                                                            -->
<!--       + For OGIG_Apparel_UniformShirt ADD researchPrerequisites (OG_Militarum_Tech_Base_T1)                      -->
<!--       + For OGIG_Apparel_CommissarJacket ADD recipeMaker                                                         -->
<!--       + For OGIG_Apparel_CommissarJacket ADD researchPrerequisites (OG_Militarum_Tech_Base_T3)                   -->
<!--       + For OGIG_Apparel_Armageddon_Uniform_Trenchcoat ADD researchPrerequisites (OG_Militarum_Tech_Base_T2)     -->
<!--       + For OGIG_Apparel_Krieg_Uniform_Trenchcoat ADD researchPrerequisites (OG_Militarum_Tech_Base_T2)          -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_UniformShirt ADD recipeMaker                                                            -->
<!--       + For OGIG_Apparel_UniformShirt ADD researchPrerequisites (OG_Militarum_Tech_Base_T1)                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_UniformShirt"]</xpath>
                    <value>
                        <recipeMaker \>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_UniformShirt"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T1</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_CommissarJacket ADD recipeMaker                                                         -->
<!--       + For OGIG_Apparel_CommissarJacket ADD researchPrerequisites (OG_Militarum_Tech_Base_T3)                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_CommissarJacket"]</xpath>
                    <value>
                        <recipeMaker \>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_CommissarJacket"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T3</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_Armageddon_Uniform_Trenchcoat ADD researchPrerequisites (OG_Militarum_Tech_Base_T2)     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_Armageddon_Uniform_Trenchcoat"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T2</li>
                        </researchPrerequisites>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES (cont)                                                                                           -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_Krieg_Uniform_Trenchcoat ADD researchPrerequisites (OG_Militarum_Tech_Base_T2)          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_Krieg_Uniform_Trenchcoat"]/recipeMaker</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>OG_Militarum_Tech_Base_T2</li>
                        </researchPrerequisites>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
