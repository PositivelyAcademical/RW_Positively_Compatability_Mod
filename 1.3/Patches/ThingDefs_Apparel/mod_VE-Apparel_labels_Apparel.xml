<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TribalKilt from Tribal Kilt to tribal kilt                                              -->
<!--    + Renames VAE_Apparel_TribalPoncho from Tribal Poncho to tribal poncho                                        -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_Cape from cloak to formal cloak                                                         -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_CasualTShirt from Casual T-Shirt to casual T-shirt                                      -->
<!--      + Adjusts description to match                                                                              -->
<!--    + Renames VAE_Apparel_TankTop from Tank Top to tank top                                                       -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_ShirtandTie from Shirt and Tie to shirt and tie                                         -->
<!--    + Renames VAE_Apparel_SuitJackete from Suit jacket to suit jacket                                             -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_BuildersJacket from Builder's Jacket to builder's jacket                                -->
<!--    + Renames VAE_Apparel_ChefsUniform from Chef's Uniform to chef's uniform                                      -->
<!--    + Renames VAE_Apparel_FleeceShirt from Fleece Shirt to fleece shirt                                           -->
<!--    + Renames VAE_Apparel_Jumpsuit from Jumpsuit to jumpsuit                                                      -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_DoctorScrubs from Doctor Scrubs to medical scrubs                                       -->
<!--    + Renames VAE_Apparel_LabCoat from Lab Coat to lab coat                                                       -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_MilitaryJacket from Military Jacket to military jacket                                  -->
<!--    + Renames VAE_Apparel_MilitaryUniform from Military Uniform to military uniform                               -->
<!--    + Renames VAE_Apparel_SheriffShirt from Sheriff Shirt to sheriff's shirt                                      -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Apparel Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--        TRIBAL APPAREL                                                                                            -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TribalKilt from Tribal Kilt to tribal kilt                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TribalKilt"]/label</xpath>
                    <value>
                        <label>tribal kilt</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TribalPoncho from Tribal Poncho to tribal poncho                                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TribalPoncho"]/label</xpath>
                    <value>
                        <label>tribal poncho</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        MEDIEVAL APPAREL                                                                                          -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_Cape from cloak to formal cloak                                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_Cape"]/label</xpath>
                    <value>
                        <label>formal cloak</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        CASUAL APPAREL                                                                                            -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_CasualTShirt from Casual T-Shirt to casual T-shirt                                      -->
<!--      + Adjusts description to match                                                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_CasualTShirt"]/label</xpath>
                    <value>
                        <label>casual T-shirt</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_CasualTShirt"]/description</xpath>
                    <value>
                        <description>A casual T-shirt with a cool sticker on it.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TankTop from Tank Top to tank top                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TankTop"]/label</xpath>
                    <value>
                        <label>tank top</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        FORMAL APPAREL                                                                                            -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_ShirtandTie from Shirt and Tie to shirt and tie                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_ShirtandTie"]/label</xpath>
                    <value>
                        <label>shirt and tie</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_SuitJacket from Suit jacket to suit jacket                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_SuitJacket"]/label</xpath>
                    <value>
                        <label>suit jacket</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        WORK APPAREL                                                                                              -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_BuildersJacket from Builder's Jacket to builder's jacket                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_BuildersJacket"]/label</xpath>
                    <value>
                        <label>builder's jacket</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_ChefsUniform from Chef's Uniform to chef's uniform                                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_ChefsUniform"]/label</xpath>
                    <value>
                        <label>chef's uniform</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_FleeceShirt from Fleece Shirt to fleece shirt                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_FleeceShirt"]/label</xpath>
                    <value>
                        <label>fleece shirt</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_Jumpsuit from Jumpsuit to jumpsuit                                                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_Jumpsuit"]/label</xpath>
                    <value>
                        <label>jumpsuit</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        STERILE APPAREL                                                                                           -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_DoctorScrubs from Doctor Scrubs to medical scrubs                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_DoctorScrubs"]/label</xpath>
                    <value>
                        <label>medical scrubs</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_LabCoat from Lab Coat to lab coat                                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_LabCoat"]/label</xpath>
                    <value>
                        <label>lab coat</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--        MILITARY APPAREL                                                                                          -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_MilitaryJacket from Military Jacket to military jacket                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_MilitaryJacket"]/label</xpath>
                    <value>
                        <label>military jacket</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_MilitaryUniform from Military Uniform to military uniform                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_MilitaryUniform"]/label</xpath>
                    <value>
                        <label>military uniform</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_SheriffShirt from Sheriff Shirt to sheriff's shirt                                      -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_SheriffShirt"]/label</xpath>
                    <value>
                        <label>sheriff's shirt</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
