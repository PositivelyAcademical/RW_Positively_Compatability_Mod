<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty                                                                                     -->
<!--       + For Apparel_AuthorityCap ADD tags Royal RoyalTier2                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adaptus Mechanicus: Armoury                                                                 -->
<!--       + For Apparel_Broadwrap REMOVE wornGraphicPath                                                             -->
<!--       + For Apparel_Broadwrap ADD thingClass AdeptusMechanicus.ApparelComposite                                  -->
<!--       + For Apparel_Broadwrap Add layer ShellExtra                                                               -->
<!--       + For Apparel_Broadwrap ADD comp AdeptusMechanicus.CompProperties_ApparelExtraPartDrawer                   -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For Apparel_Broadwrap ADD countsAsClothingForNudity (false)                                              -->
<!--       + For Apparel_VisageMask ADD countsAsClothingForNudity (false)                                             -->
<!--       + For Apparel_Slicecap ADD countsAsClothingForNudity (false)                                               -->
<!--       + For Apparel_Collar ADD countsAsClothingForNudity (false)                                                 -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ideology</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty                                                                                     -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_AuthorityCap ADD tags Royal RoyalTier2                                                       -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="Apparel_AuthorityCap"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>Royal</li>
                                        <li>RoyalTier2</li>
                                    </tags>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Adeptus Mechanicus: Armoury</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adaptus Mechanicus: Armoury                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_Broadwrap REMOVE wornGraphicPath                                                             -->
<!--       + For Apparel_Broadwrap ADD thingClass AdeptusMechanicus.ApparelComposite                                  -->
<!--       + For Apparel_Broadwrap Add layer ShellExtra                                                               -->
<!--       + For Apparel_Broadwrap ADD comp AdeptusMechanicus.CompProperties_ApparelExtraPartDrawer                   -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationRemove">
                                <xpath>/Defs/ThingDef[defName="Apparel_Broadwrap"]/apparel/wornGraphicPath</xpath>
                            </li>

                            <li Class="PatchOperationInsert">
                                <xpath>/Defs/ThingDef[defName="Apparel_Broadwrap"]/description</xpath>
                                <value>
                                    <thingClass>AdeptusMechanicus.ApparelComposite</thingClass>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="Apparel_Broadwrap"]/apparel/layers</xpath>
                                <value>
                                    <li>ShellExtra</li>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="Apparel_Broadwrap"]</xpath>
                                <value>
                                    <comps>
                                        <li Class="AdeptusMechanicus.CompProperties_Wargear"></li>
                                        <li Class="AdeptusMechanicus.CompProperties_ApparelExtraPartDrawer">
                                            <ExtrasEntries>
                                                <li>
                                                    <graphicData>
                                                        <texPath>Things/Pawn/Humanlike/Apparel/Broadwrap/Broadwrap</texPath>
                                                        <shaderType>Cutout</shaderType>
                                                    </graphicData>
                                                    <UseBodytypeTextures>false</UseBodytypeTextures>
                                                    <commonality>10</commonality>
                                                </li>
                                            </ExtrasEntries>
                                            <NorthOffset>0,0.05,0</NorthOffset>
                                            <SouthOffset>0,0.05,0</SouthOffset>
                                            <EastOffset>0,0.05,0</EastOffset>
                                            <WestOffset>0,0.05,0</WestOffset>
                                        </li>
                                    </comps>
                                </value>
                            </li>

                        </operations>
                    </match>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_Broadwrap ADD countsAsClothingForNudity (false)                                              -->
<!--       + For Apparel_VisageMask ADD countsAsClothingForNudity (false)                                             -->
<!--       + For Apparel_Slicecap ADD countsAsClothingForNudity (false)                                               -->
<!--       + For Apparel_Collar ADD countsAsClothingForNudity (false)                                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_Broadwrap"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_VisageMask"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_Slicecap"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Apparel_Collar"]/apparel</xpath>
                    <value>
                        <countsAsClothingForNudity>false</countsAsClothingForNudity>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
