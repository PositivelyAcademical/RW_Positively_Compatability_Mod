<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Renames VAE_Apparel_PeltCoat from Pelt Coat to pelt coat                                                    -->
<!--    + Renames VAE_Apparel_TribalPoncho from Tribal Poncho to tribal poncho                                        -->
<!--    + Renames VAE_Apparel_TribalKilt from Tribal Kilt to tribal kilt                                              -->
<!--    + Renames VAE_Headgear_Hood from hood to simple hood                                                          -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Apperal Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_PeltCoat from Pelt Coat to pelt coat                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_PeltCoat"]/label</xpath>
                    <value>
                        <label>pelt coat</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TribalPoncho from Tribal Poncho to tribal poncho                                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TribalPoncho"]/label</xpath>
                    <value>
                        <label>tribal poncho</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_TribalKilt from Tribal Kilt to tribal kilt                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_TribalKilt"]/label</xpath>
                    <value>
                        <label>tribal kilt</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_Hood from hood to simple hood                                                          -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_Hood"]/label</xpath>
                    <value>
                        <label>simple hood</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
