<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Mechanicus                                                                                     -->
<!--       + For @OG_Mechanicus_Apparel_Makeable REMOVE researchPrerequisites                                         -->
<!--       + For @OG_Mechanicus_Apparel_Armor_Makeable REMOVE researchPrerequisites                                   -->
<!--       - For @OG_Mechanicus_Apparel_Wargear_Makeable REMOVE researchPrerequisites                                 -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Militarum                                                                                      -->
<!--       + For @OG_Imperial_Apparel_Makeable REMOVE researchPrerequisites                                           -->
<!--       + For @OG_Imperial_Apparel_Makeable_NoStuffColour REMOVE researchPrerequisites                             -->
<!--       + For @OG_Imperial_Apparel_Armor_Makeable REMOVE researchPrerequisites                                     -->
<!--       + For @OG_Imperial_Apparel_PowerArmor_Makeable REMOVE researchPrerequisites                                -->
<!--       + For @OG_Imperial_Apparel_Wargear_Makeable REMOVE researchPrerequisites                                   -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Mechanicus                                                                                     -->
<!--  ==============================================================================================================  -->
<!--       + For @OG_Mechanicus_Apparel_Makeable REMOVE researchPrerequisites                                         -->
<!--       + For @OG_Mechanicus_Apparel_Armor_Makeable REMOVE researchPrerequisites                                   -->
<!--       - For @OG_Mechanicus_Apparel_Wargear_Makeable REMOVE researchPrerequisites                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Mechanicus_Apparel_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Mechanicus_Apparel_Armor_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>

<!--  ==============================================================================================================  -->
<!--            <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Mechanicus_Apparel_Wargear_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>                                                                                                 -->
<!--  ==============================================================================================================  -->

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - Militarum                                                                                      -->
<!--  ==============================================================================================================  -->
<!--       + For @OG_Imperial_Apparel_Makeable REMOVE researchPrerequisites                                           -->
<!--       + For @OG_Imperial_Apparel_Makeable_NoStuffColour REMOVE researchPrerequisites                             -->
<!--       + For @OG_Imperial_Apparel_Armor_Makeable REMOVE researchPrerequisites                                     -->
<!--       + For @OG_Imperial_Apparel_PowerArmor_Makeable REMOVE researchPrerequisites                                -->
<!--       + For @OG_Imperial_Apparel_Wargear_Makeable REMOVE researchPrerequisites                                   -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Imperial_Apparel_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Imperial_Apparel_Makeable_NoStuffColour"]/recipeMaker/researchPrerequisites</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Imperial_Apparel_Armor_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Imperial_Apparel_PowerArmor_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Imperial_Apparel_Wargear_Makeable"]/recipeMaker/researchPrerequisites</xpath>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
