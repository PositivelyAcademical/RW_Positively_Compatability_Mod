<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Sets label for OGIG_Apparel_UniformShirt from imperial undershirt to Militarum uniform shirt                -->
<!--      + Updates description to match                                                                              -->
<!--    + Sets label for OGIG_Apparel_CommissarJacket from Commissar Jacket to Commissar's jacket                     -->
<!--      + Updates description to match                                                                              -->
<!--    + Sets label for OGIG_Apparel_Armageddon_Uniform_Trenchcoat from armageddon pattern trenchcoat to Armageddon  -->
<!--    pattern trenchcoat                                                                                            -->
<!--    + Sets label for OGIG_Apparel_Krieg_Uniform_Trenchcoat from krieg pattern trenchcoat to Krieg pattern         -->
<!--    trenchcoat                                                                                                    -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--    + Sets label for OGIG_Apparel_UniformShirt from imperial undershirt to Militarum uniform shirt                -->
<!--      + Updates description to match                                                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_UniformShirt"]/label</xpath>
                    <value>
                        <label>Militarum uniform shirt</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_UniformShirt"]/description</xpath>
                    <value>
                        <description>A sleeveless uniform shirt worn by the soldiers of the Astra Militarum.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Sets label for OGIG_Apparel_CommissarJacket from Commissar Jacket to Commissar's jacket                     -->
<!--      + Updates description to match                                                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_CommissarJacket"]/label</xpath>
                    <value>
                        <label>Commissar's jacket</label>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_CommissarJacket"]/description</xpath>
                    <value>
                        <description>The uniform jacket of officers of the Departmento Munitorum's Officio Prefectus, the Commissariat.</description>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Sets label for OGIG_Apparel_Armageddon_Uniform_Trenchcoat from armageddon pattern trenchcoat to Armageddon  -->
<!--    pattern trenchcoat                                                                                            -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_Armageddon_Uniform_Trenchcoat"]/label</xpath>
                    <value>
                        <label>Armageddon pattern trenchcoat</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Sets label for OGIG_Apparel_Krieg_Uniform_Trenchcoat from krieg pattern trenchcoat to Krieg pattern         -->
<!--    trenchcoat                                                                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_Krieg_Uniform_Trenchcoat"]/label</xpath>
                    <value>
                        <label>Krieg pattern trenchcoat</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
