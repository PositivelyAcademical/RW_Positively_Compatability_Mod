<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - SororitasArmour                                                                                -->
<!--       + For @OG_Sororitas_Apparel_Armor_PowerArmour_Base REMOVE researchPrerequisites PoweredArmor               -->
<!--       + For OGAS_Apparel_PowerArmour REMOVE researchPrerequisites                                                -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES - MilitarumArmour                                                                                -->
<!--       + For OGIG_Apparel_FlakArmourLight ADD researchPrerequisites OG_Imperial_Tech_Apparel                      -->
<!--       + For OGIG_Apparel_FlakArmourLightGreaves ADD researchPrerequisites OG_Imperial_Tech_Apparel               -->
<!--       + For OGIG_Apparel_FlakArmour INSERT researchPrerequisites (OG_Imperial_Tech_Apparel_Armour_T1) below      -->
<!--           generateCommonality                                                                                    -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>


<!--  ==============================================================================================================  -->
<!--     + ALL CASES - SororitasArmour                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For @OG_Sororitas_Apparel_Armor_PowerArmour_Base REMOVE researchPrerequisites PoweredArmor               -->
<!--       + For OGAS_Apparel_PowerArmour REMOVE researchPrerequisites                                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[@Name="OG_Sororitas_Apparel_Armor_PowerArmour_Base"]/recipeMaker/researchPrerequisites/li[1]</xpath>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="OGAS_Apparel_PowerArmour"]/recipeMaker/researchPrerequisites</xpath>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - MilitarumArmour                                                                                -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_FlakArmourLight ADD researchPrerequisites OG_Imperial_Tech_Apparel                      -->
<!--       + For OGIG_Apparel_FlakArmourLightGreaves ADD researchPrerequisites OG_Imperial_Tech_Apparel               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_FlakArmourLight"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <li>OG_Imperial_Tech_Apparel</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_FlakArmourLightGreaves"]/recipeMaker/researchPrerequisites</xpath>
                    <value>
                        <li>OG_Imperial_Tech_Apparel</li>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES - MilitarumArmour (cont)                                                                         -->
<!--  ==============================================================================================================  -->
<!--       + For OGIG_Apparel_FlakArmour INSERT researchPrerequisites (OG_Imperial_Tech_Apparel_Armour_T1) below      -->
<!--           generateCommonality                                                                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationInsert">
                    <xpath>/Defs/ThingDef[defName="OGIG_Apparel_FlakArmour"]/generateCommonality</xpath>
                    <value>
                        <recipeMaker>
                            <researchPrerequisites>
                                <li>OG_Imperial_Tech_Apparel_Armour_T1</li>
                            </researchPrerequisites>
                        </recipeMaker>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
