<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Renames VAE_Apparel_Cape from cloak to formal cloak                                                         -->
<!--    + Renames VAE_Headgear_TrapperHat from Trapper Hat to trapper hat                                             -->
<!--    + Renames VAE_Headgear_SummerHat from Summer Hat to summer hat                                                -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Apperal Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Apparel_Cape from cloak to formal cloak                                                         -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Apparel_Cape"]/label</xpath>
                    <value>
                        <label>formal cloak</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_TrapperHat from Trapper Hat to trapper hat                                             -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_TrapperHat"]/label</xpath>
                    <value>
                        <label>trapper hat</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_SummerHat from Summer Hat to summer hat                                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_SummerHat"]/label</xpath>
                    <value>
                        <label>summer hat</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
