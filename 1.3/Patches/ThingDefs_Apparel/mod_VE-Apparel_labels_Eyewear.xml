<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_Sunglasses from Sunglasses to sunglasses                                               -->
<!--    + Renames VAE_Headgear_Glasses from Glasses to glasses                                                        -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Apparel Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--        INDUSTRIAL EYEWEAR                                                                                        -->
<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_Glasses from Glasses to glasses                                                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_Glasses"]/label</xpath>
                    <value>
                        <label>glasses</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--    + Renames VAE_Headgear_Sunglasses from Sunglasses to sunglasses                                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VAE_Headgear_Sunglasses"]/label</xpath>
                    <value>
                        <label>sunglasses</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
