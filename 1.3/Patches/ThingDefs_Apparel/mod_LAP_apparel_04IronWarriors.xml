    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Legiones Astartes: Primarch</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Royalty</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Royalty                                                                                     -->
<!--  ==============================================================================================================  -->
<!--       + For LAP_Armour_IronWarriors_Armor ADD tags PrestigeCombatGear                                            -->
<!--       + For LAP_Armour_IronWarriors_Apothecary_Armor ADD tags PrestigeCombatGear                                 -->
<!--       + For LAP_Armour_IronWarriors_Techmarine_Armor ADD tags PrestigeCombatGear                                 -->
<!--       + For LAP_Armour_IronWarriors_Terminator ADD tags PrestigeCombatGear                                       -->
<!--       + For LAP_Armour_Perturabo_Armor ADD tags PrestigeCombatGear                                               -->
<!--  ==============================================================================================================  -->
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
                                        <li>PrestigeCombatGear</li>
                                    </tags>
                                </value>
                            </li>

                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Apothecary_Armor"]/apparel</xpath>
                                <value>
                                    <tags>
