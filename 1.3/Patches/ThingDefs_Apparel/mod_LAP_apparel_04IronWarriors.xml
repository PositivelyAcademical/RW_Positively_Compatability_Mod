                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="LAP_Armour_IronWarriors_Armor"]/apparel/layers</xpath>
                    <value>
                        <li MayRequire="Ogliss.AdMech.Armoury">ShellExtra</li>
