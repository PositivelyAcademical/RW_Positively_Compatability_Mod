<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--       + For Apparel_ShieldBelt REPLACE layer Belt with BeltWargear1                                              -->
<!--       + For Apparel_SmokepopBelt REPLACE layer Belt with BeltWargear3                                            -->
<!--       + For Apparel_PsychicShockLance REPLACE layer Belt with BeltWargear3                                       -->
<!--       + For Apparel_PsychicInsanityLance REPLACE layer Belt with BeltWargear3                                    -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_ShieldBelt REPLACE layer Belt with BeltWargear1                                              -->
<!--       + For Apparel_SmokepopBelt REPLACE layer Belt with BeltWargear3                                            -->
<!--       + For Apparel_PsychicShockLance REPLACE layer Belt with BeltWargear3                                       -->
<!--       + For Apparel_PsychicInsanityLance REPLACE layer Belt with BeltWargear3                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_ShieldBelt"]/apparel/layers/li[1]</xpath>
                    <value>
                       <li>BeltWargear1</li>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_SmokepopBelt"]/apparel/layers/li[1]</xpath>
                    <value>
                       <li>BeltWargear3</li>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_PsychicShockLance"]/apparel/layers/li[1]</xpath>
                    <value>
                       <li>BeltWargear3</li>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_PsychicInsanityLance"]/apparel/layers/li[1]</xpath>
                    <value>
                       <li>BeltWargear3</li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
