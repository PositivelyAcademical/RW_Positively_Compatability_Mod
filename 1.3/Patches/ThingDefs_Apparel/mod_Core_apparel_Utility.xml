<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--       + For Apparel_ShieldBelt REPLACE layers (Belt) with layers (BeltWargear1)                                  -->
<!--       + For Apparel_SmokepopBelt REPLACE layers (Belt) with layers (BeltWargear3)                                -->
<!--       + For Apparel_PsychicShockLance REPLACE layers (Belt) with layers (BeltWargear3)                           -->
<!--       + For Apparel_PsychicInsanityLance REPLACE layers (Belt) with layers (BeltWargear3)                        -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For Apparel_ShieldBelt REPLACE layers (Belt) with layers (BeltWargear1)                                  -->
<!--       + For Apparel_SmokepopBelt REPLACE layers (Belt) with layers (BeltWargear3)                                -->
<!--       + For Apparel_PsychicShockLance REPLACE layers (Belt) with layers (BeltWargear3)                           -->
<!--       + For Apparel_PsychicInsanityLance REPLACE layers (Belt) with layers (BeltWargear3)                        -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_ShieldBelt"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>BeltWargear1</li>
                        </layers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_SmokepopBelt"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>BeltWargear3</li>
                        </layers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_PsychicShockLance"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>BeltWargear3</li>
                        </layers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="Apparel_PsychicInsanityLance"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>BeltWargear3</li>
                        </layers>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
