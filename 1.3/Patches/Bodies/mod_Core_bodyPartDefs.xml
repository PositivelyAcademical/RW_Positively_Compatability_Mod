<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--       + For OGNeuralLink REPLACE listOrder 201 with 202                                                          -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For UpperHead REPLACE listOrder 200 with 201                                                             -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Adeptus Mechanicus: Armoury                                                                 -->
<!--  ==============================================================================================================  -->
<!--       + For OGNeuralLink REPLACE listOrder 201 with 202                                                          -->
<!--  ==============================================================================================================  -->
                <Operation Class="PatchOperationReplace">
                    <xpath>/Defs/BodyPartGroupDef[defName="OGNeuralLink"]/listOrder</xpath>
                    <value>
                       <listOrder>202</listOrder>
                    </value>
                </Operation>

            </operations>
        </match>
    </Operation>

<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For UpperHead REPLACE listOrder 200 with 201                                                             -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/BodyPartGroupDef[defName="UpperHead"]/listOrder</xpath>
        <value>
           <listOrder>201</listOrder>
        </value>
    </Operation>

</Patch>
