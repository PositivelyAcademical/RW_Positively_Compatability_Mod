<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + In Humanlike for Nose add groups LowerHead                                                               -->
<!--       + In Humanlike for Jaw add groups LowerHead                                                                -->
<!--  ==============================================================================================================  -->

<!--  ==============================================================================================================  -->
<!--       + In Humanlike for Nose add groups LowerHead                                                               -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/BodyDef[defName="Human"]/corePart/parts/li[def="Neck"]/parts/li[def="Head"]/li[def="Nose"]/groups</xpath>
        <value>
           <li>LowerHead</li>
        </value>
    </Operation>

<!--  ==============================================================================================================  -->
<!--       + In Humanlike for Jaw add groups LowerHead                                                                -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/BodyDef[defName="Human"]/corePart/parts/li[def="Neck"]/parts/li[def="Head"]/li[def="Jaw"]/groups</xpath>
        <value>
           <li>LowerHead</li>
        </value>
    </Operation>

</Patch>
