<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Sets new labels and draw orders for Core apparel layer defs                                                 -->
<!--      + Change drawOrder for S16_Vibrator2 from -10 to 1                                                          -->
<!--        +  Change label for S16_Vibrator2 from vibrator to internal                                               -->
<!--      + Change drawOrder for S16_Vibrator from -25 to 11                                                          -->
<!--        +  Change label for S16_Vibrator from vibrator to internal                                                -->
<!--      + Change drawOrder for S16_OnSkin from -100 to 30                                                           -->
<!--      + Change drawOrder for S16_Underwear from -50 to 100                                                        -->
<!--        + Change label for S16_Underwear from underwear to panties                                                -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>RJW Apparel and Sextoys Extension</li>
            <li>RJW Apparel and Sextoys Extension (continued)</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for S16_Vibrator2 from -10 to 1                                                          -->
<!--        +  Change label for S16_Vibrator2 from vibrator to internal                                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Vibrator2"]/drawOrder</xpath>
                    <value>
                        <drawOrder>1</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Vibrator2"]/label</xpath>
                    <value>
                        <label>internal</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for S16_Vibrator from -25 to 11                                                          -->
<!--        +  Change label for S16_Vibrator from vibrator to internal                                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Vibrator"]/drawOrder</xpath>
                    <value>
                        <drawOrder>11</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Vibrator"]/label</xpath>
                    <value>
                        <label>internal</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for S16_OnSkin from -100 to 30                                                           -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_OnSkin"]/drawOrder</xpath>
                    <value>
                        <drawOrder>30</drawOrder>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for S16_Underwear from -50 to 100                                                        -->
<!--        + Change label for S16_Underwear from underwear to panties                                                -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Underwear"]/drawOrder</xpath>
                    <value>
                        <drawOrder>100</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="S16_Underwear"]/label</xpath>
                    <value>
                        <label>panties</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
