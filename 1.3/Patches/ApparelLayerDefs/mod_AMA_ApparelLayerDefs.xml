<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Sets new labels and draw orders for Core apparel layer defs                                                 -->
<!--      + Change drawOrder for Underwear from -25 to -20                                                            -->
<!--      + Change drawOrder for OverSkin from 50 to 10                                                               -->
<!--        + Change label for OverSkin from overskin to overskin (dev)                                               -->
<!--      + Change drawOrder for MiddleEquipment from 150 to 110                                                      -->
<!--        + Change label for MiddleEquipment from middle slot to middle slot dev                                    -->
<!--      + Change drawOrder for ShellEquipment from 250 to 170                                                       -->
<!--        + Change label for ShellEquipment from outer slot to outer slot dev                                       -->
<!--      + Change drawOrder for BeltWargear1 from 325 to 181                                                         -->
<!--        + Change label for BeltWargear1 from Wargear slot 1 to wargear slot 1                                     -->
<!--      + Change drawOrder for BeltWargear2 from 350 to 182                                                         -->
<!--        + Change label for BeltWargear2 from Wargear slot 2 to wargear slot 2                                     -->
<!--      + Change drawOrder for BeltWargear3 from 375 to 183                                                         -->
<!--        + Change label for BeltWargear3 from Wargear slot 3 to wargear slot 3                                     -->
<!--      + Change drawOrder for ShellExtra from 425 to 200                                                           -->
<!--        + Change label for ShellExtra from Shell extras to cloaks                                                 -->
<!--      + Change label for OverheadUnder from headgear slot to headgear slot (dev)                                  -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

<!--  ==============================================================================================================  -->
<!--      + Sets drawOrder for Underwear from -25 to -20                                                              -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="Underwear"]/drawOrder</xpath>
                    <value>
                        <drawOrder>-20</drawOrder>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for OverSkin from 50 to 10                                                               -->
<!--        + Change label for OverSkin from overskin to overskin (dev)                                               -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="OverSkin"]/drawOrder</xpath>
                    <value>
                        <drawOrder>10</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="OverSkin"]/label</xpath>
                    <value>
                        <label>overskin (dev)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Sets drawOrder for MiddleEquipment from 150 to 110                                                        -->
<!--        + Change label for MiddleEquipment from middle slot to middle slot dev                                    -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="MiddleEquipment"]/drawOrder</xpath>
                    <value>
                        <drawOrder>110</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="MiddleEquipment"]/label</xpath>
                    <value>
                        <label>middle slot (dev)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Sets drawOrder for ShellEquipment from 250 to 170                                                         -->
<!--        + Change label for ShellEquipment from outer slot to outer slot dev                                       -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="ShellEquipment"]/drawOrder</xpath>
                    <value>
                        <drawOrder>170</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="ShellEquipment"]/label</xpath>
                    <value>
                        <label>outer slot (dev)</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for BeltWargear1 from 325 to 181                                                         -->
<!--        + Change label for BeltWargear1 from Wargear slot 1 to wargear slot 1                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear1"]/drawOrder</xpath>
                    <value>
                        <drawOrder>181</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear1"]/label</xpath>
                    <value>
                        <label>wargear slot 1</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for BeltWargear2 from 350 to 182                                                         -->
<!--        + Change label for BeltWargear2 from Wargear slot 2 to wargear slot 2                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear2"]/drawOrder</xpath>
                    <value>
                        <drawOrder>182</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear2"]/label</xpath>
                    <value>
                        <label>wargear slot 2</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for BeltWargear3 from 375 to 183                                                         -->
<!--        + Change label for BeltWargear3 from Wargear slot 3 to wargear slot 3                                     -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear3"]/drawOrder</xpath>
                    <value>
                        <drawOrder>183</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="BeltWargear3"]/label</xpath>
                    <value>
                        <label>wargear slot 3</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change drawOrder for ShellExtra from 425 to 200                                                           -->
<!--        + Change label for ShellExtra from Shell extras to cloaks                                                 -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="ShellExtra"]/drawOrder</xpath>
                    <value>
                        <drawOrder>200</drawOrder>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="ShellExtra"]/label</xpath>
                    <value>
                        <label>cloaks</label>
                    </value>
                </li>

<!--  ==============================================================================================================  -->
<!--      + Change label for OverheadUnder from headgear slot to headgear slot (dev)                                  -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ApparelLayerDef[defName="OverheadUnder"]/label</xpath>
                    <value>
                        <label>headgear slot (dev)</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
