<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--       + For OG_Sororitas_Tech_Base_T2 ADD prerequisites OG_Imperial_Tech_Apparel_Armour_T3                       -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adeptus Mechanicus: Armoury</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>


<!--  ==============================================================================================================  -->
<!--     + ALL CASES                                                                                                  -->
<!--  ==============================================================================================================  -->
<!--       + For OG_Sororitas_Tech_Base_T2 ADD prerequisites PoweredArmor                                             -->
<!--  ==============================================================================================================  -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ResearchProjectDef[defName="OG_Sororitas_Tech_Base_T2"]/prerequisites</xpath>
                    <value>
                        <li>PoweredArmor</li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
