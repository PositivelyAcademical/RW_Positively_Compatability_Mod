<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Vanilla Weapons Expanded                                                                    -->
<!--       + For Machining ADD prerequisites VWE_Tools                                                                -->
<!--       + For Gunsmithing ADD prerequisites VWE_Gunpowder                                                          -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationSequence">
        <operations>

            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Vanilla Weapons Expanded</li>
                </mods>
                <match Class="PatchOperationSequence">
                    <operations>
<!--  ==============================================================================================================  -->
<!--     + Requires MATCH Vanilla Weapons Expanded                                                                    -->
<!--  ==============================================================================================================  -->
<!--       + For Machining ADD prerequisites VWE_Tools                                                                -->
<!--       + For Gunsmithing ADD prerequisites VWE_Gunpowder                                                          -->
<!--  ==============================================================================================================  -->
                        <li Class = "PatchOperationAdd">
                            <xpath>/Defs/ResearchProjectDef[defName="Machining"]/prerequisites</xpath>
                            <value>
                                <li>VWE_Tools</li>
                            </value>
                        </li>

                        <li Class = "PatchOperationAdd">
                            <xpath>/Defs/ResearchProjectDef[defName="Gunsmithing"]/prerequisites</xpath>
                            <value>
                                <li>VWE_Gunpowder</li>
                            </value>
                        </li>

                    </operations>
                </match>
            </li>
        </operations>
    </Operation>
</Patch>
