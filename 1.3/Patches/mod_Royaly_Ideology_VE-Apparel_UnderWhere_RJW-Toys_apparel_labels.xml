<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Renames Royalty vests as waistcoats                                                                         -->
<!--    + Renames Ideology blindfold to simple blindfold                                                              -->
<!--    + Renames Vanilla Apparel Expanded to lowercase per convention                                                -->
<!--    + Renames UnderWhere Tanktop to vest                                                                          -->
<!--    + Renames RJW blindfold to BDSM blindfold                                                                     -->
<!--  ==============================================================================================================  -->
    <Operation Class="PatchOperationSequence">
        <operations>

<!--  ==============================================================================================================  -->
<!--    + Renames Royalty vests as waistcoats                                                                         -->
<!--  ==============================================================================================================  -->
            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Royalty</li>
                </mods>
                <match Class="PatchOperationSequence">
                    <operations>

                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="Apparel_VestRoyal"]/label</xpath>
                            <value>
                                <label>formal waistcoat</label>
                            </value>
                        </li>

                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="Apparel_VestRoyal"]/description</xpath>
                            <value>
                                <description>A waistcoat embroidered with complex decorative designs.</description>
                            </value>
                        </li>

                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="Apparel_PsyfocusVest"]/label</xpath>
                            <value>
                                <label>eltex waistcoat</label>
                            </value>
                        </li>


                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="Apparel_PsyfocusVest"]/description</xpath>
                            <value>
                                <description>A thin waistcoat embedded with special psychic focusing materials. These enhance psychic sensitivity and help dissipate neural heat.</description>
                            </value>
                        </li>
                    </operations>
                </match>
            </li>

<!--  ==============================================================================================================  -->
<!--    + Renames Ideology blindfold to simple blindfold                                                              -->
<!--  ==============================================================================================================  -->
            <li Class="PatchOperationFindMod">
