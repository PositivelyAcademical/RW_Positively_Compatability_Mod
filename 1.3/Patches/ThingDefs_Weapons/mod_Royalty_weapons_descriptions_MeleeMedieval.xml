<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--  ==============================================================================================================  -->
<!--  What this xml patch does:                                                                                       -->
<!--    + Adjusts descriptions of MeleeWeapon_Warhammer                                                               -->
<!--  ==============================================================================================================  -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Royalty</li>
        </mods>

        <match Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="MeleeWeapon_Warhammer"]/description</xpath>
            <value>
                <description>A long polearm topped with a brutal hammer. The powerful blunt impacts can pulverize an enemy's insides, even through armour.</description>
            </value>
        </match>

    </Operation>
</Patch>
